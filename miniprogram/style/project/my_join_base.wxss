/* ========== 我的预约页面霓虹风格基础样式 ========== */

/* ========== 列表容器 ========== */
.text-pic-list-box {
	padding: 20rpx 24rpx;
}

.text-pic-list-box.padding-project {
	padding: 20rpx 24rpx;
}

/* ========== 预约卡片 ========== */
.text-pic-list-box .item {
	position: relative;
	overflow: hidden;
	margin-bottom: 24rpx;
	padding: 32rpx;
	background: linear-gradient(145deg, rgba(37, 66, 111, 0.4), rgba(62, 61, 91, 0.4));
	border: 1rpx solid rgba(255, 255, 255, 0.1);
	border-radius: 24rpx;
	border-left: 6rpx solid #73bdf5;
}

.text-pic-list-box .item.card-project {
	background: linear-gradient(145deg, rgba(37, 66, 111, 0.4), rgba(62, 61, 91, 0.4)) !important;
	border-radius: 24rpx !important;
}

.text-pic-list-box .item.shadow-project {
	box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3) !important;
}

/* 已结束卡片样式 */
.text-pic-list-box .item.is-timeout {
	border-left-color: #888;
	opacity: 0.7;
}

/* 已取消卡片样式 */
.text-pic-list-box .item.is-cancelled {
	border-left-color: #888;
	opacity: 0.7;
}

/* ========== 状态标签 ========== */
.text-pic-list-box .item .status {
	z-index: 99;
	position: absolute;
	top: 0;
	right: 0;
	font-size: 22rpx;
	border-bottom-left-radius: 16rpx;
	background: rgba(136, 136, 136, 0.3);
	padding: 8rpx 16rpx;
	color: rgba(255, 255, 255, 0.6);
	border: 1rpx solid rgba(136, 136, 136, 0.3);
	border-top: none;
	border-right: none;
}

/* 二维码入口 */
.text-pic-list-box .item .qr {
	z-index: 99;
	position: absolute;
	top: 0;
	right: 0;
	font-size: 36rpx;
	border-bottom-left-radius: 16rpx;
	background: rgba(115, 189, 245, 0.2);
	padding: 8rpx 16rpx;
	color: #73bdf5;
	border: 1rpx solid rgba(115, 189, 245, 0.3);
	border-top: none;
	border-right: none;
}

.text-pic-list-box .item .qr:active {
	background: rgba(115, 189, 245, 0.4);
}

/* ========== 卡片标题 ========== */
.text-pic-list-box .item .title {
	position: relative;
	padding-right: 80rpx;
	font-size: 32rpx;
	font-weight: 600;
	color: #fff;
	line-height: 1.4;
	margin-bottom: 16rpx;
}

.text-pic-list-box .item .title::before {
	content: '';
	position: absolute;
	left: -32rpx;
	top: 50%;
	transform: translateY(-50%);
	width: 8rpx;
	height: 32rpx;
	background: linear-gradient(180deg, #73bdf5, #6366f1);
	border-radius: 4rpx;
}

/* ========== 时间和导师信息 ========== */
.text-pic-list-box .item .author {
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.7);
	margin-bottom: 12rpx;
	display: flex;
	align-items: center;
}

.text-pic-list-box .item .author .icon-time {
	color: #73bdf5;
	margin-right: 8rpx;
}

/* 导师信息行 */
.text-pic-list-box .item .instructor-row {
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.7);
	margin-bottom: 16rpx;
	display: flex;
	align-items: center;
}

.text-pic-list-box .item .instructor-row .icon-my {
	color: #a78bfa;
	margin-right: 8rpx;
}

/* ========== 状态信息 ========== */
.text-pic-list-box .item .data {
	line-height: 1.5;
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.6);
	margin-top: 12rpx;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	flex-wrap: wrap;
}

/* 预约成功状态 */
.text-pic-list-box .item .data .text-green,
.text-pic-list-box .item .data .status-success {
	color: #2dd4bf !important;
	display: flex;
	align-items: center;
}

.text-pic-list-box .item .data .text-green .icon-newshot,
.text-pic-list-box .item .data .status-success .icon-newshot {
	margin-right: 8rpx;
}

/* 已取消状态 */
.text-pic-list-box .item .data .text-grey,
.text-pic-list-box .item .data .status-cancelled {
	color: rgba(255, 255, 255, 0.4) !important;
}

/* 系统取消状态 */
.text-pic-list-box .item .data .text-orange,
.text-pic-list-box .item .data .status-system-cancelled {
	color: #ff9f43 !important;
}

/* ========== 按钮区域 ========== */
.text-pic-list-box .item .data.data-button {
	margin-top: 20rpx;
	padding-top: 20rpx;
	border-top: 1rpx solid rgba(255, 255, 255, 0.08);
	display: flex;
	justify-content: flex-start;
	gap: 16rpx;
}

/* 通用按钮样式 */
.btn.mid {
	padding: 0 30rpx;
	height: 64rpx;
	line-height: 64rpx;
	font-size: 26rpx;
	border-radius: 32rpx;
	display: inline-flex;
	align-items: center;
	justify-content: center;
}

/* 查看详情按钮 - 透明霓虹边框风格 */
.text-pic-list-box .item .btn.mid.bg-gray,
.text-pic-list-box .item .btn.mid.bg-grey {
	background: transparent !important;
	color: #73bdf5 !important;
	border: 1rpx solid rgba(115, 189, 245, 0.4) !important;
}

.text-pic-list-box .item .btn.mid.bg-gray:active,
.text-pic-list-box .item .btn.mid.bg-grey:active {
	background: rgba(115, 189, 245, 0.15) !important;
}

/* 取消按钮 - 柔和风格 */
.text-pic-list-box .item .btn.mid.bg-grey.light {
	background: rgba(255, 255, 255, 0.08) !important;
	color: rgba(255, 255, 255, 0.6) !important;
	border: 1rpx solid rgba(255, 255, 255, 0.15) !important;
}

.text-pic-list-box .item .btn.mid.bg-grey.light:active {
	background: rgba(255, 255, 255, 0.15) !important;
}

/* 文字颜色覆盖 */
.text-pic-list-box .item .btn.text-black {
	color: #73bdf5 !important;
}

/* ========== 时间文本 ========== */
.text-time {
	color: rgba(255, 255, 255, 0.4);
}

/* ========== 加载状态 ========== */
.load-project {
	color: rgba(255, 255, 255, 0.5) !important;
	padding: 40rpx 0;
	text-align: center;
}

/* ========== 空状态 ========== */
.empty-box {
	padding: 100rpx 40rpx;
	text-align: center;
}

.empty-box .icon {
	font-size: 120rpx;
	color: rgba(255, 255, 255, 0.2);
	margin-bottom: 30rpx;
}

.empty-box .text {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.4);
}

/* ========== 签到状态标记 ========== */
.checkin-badge {
	display: inline-block;
	background: rgba(45, 212, 191, 0.2);
	color: #2dd4bf;
	padding: 4rpx 12rpx;
	border-radius: 8rpx;
	font-size: 22rpx;
	margin-left: 12rpx;
}

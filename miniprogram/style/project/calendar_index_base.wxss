
page {
	background-color: #f2f2f2;
}

.main {
	padding: 0 0 20rpx;
}

.main .plan-date {
	width: 100%;
	position: sticky;
	top: 0;
	z-index: 999;
	box-shadow: var(--ShadowSize) var(--greyShadow);
}

.main .list {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
	padding: 30rpx 20rpx;
}

/* 旧样式保留（可选） */
.main .list .item {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 100rpx;
	padding: 0 30rpx 0 0;
	background-color: #fff;
	margin-bottom: 30rpx;
	border-radius: 10rpx;
	overflow: hidden;
}

.main .list .item .left {
	width: 8rpx;
	height: 100rpx;
	margin-right: 15rpx;
}

.main .list .item .img {
	width: 65rpx;
	height: 65rpx;
	border-radius: 50%;
	position: relative;
}

.main .list .item .title {
	flex: 1;
	text-align: left;
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
	margin-left: 20rpx;
}

.main .list .item .time {
	width: 140rpx;
	text-align: right;
	font-size: 26rpx;
	color: #999;
}

/* 新的大卡片样式 */
.main .list .meet-card {
	width: 100%;
	background-color: #fff;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 24rpx;
	box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
	transition: all 0.3s;
}

.main .list .meet-card:active {
	transform: scale(0.98);
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.meet-card .card-header {
	display: flex;
	align-items: flex-start;
	gap: 24rpx;
}

.card-avatar {
	flex-shrink: 0;
}

.avatar-img {
	width: 100rpx;
	height: 100rpx;
	border-radius: 16rpx;
}

.avatar-placeholder {
	width: 100rpx;
	height: 100rpx;
	border-radius: 16rpx;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 48rpx;
	color: #fff;
}

.card-info {
	flex: 1;
	display: flex;
	flex-direction: column;
	gap: 12rpx;
}

.card-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	line-height: 1.4;
}

.card-time-slots {
	display: flex;
	align-items: center;
	font-size: 26rpx;
	color: #666;
	line-height: 1.4;
}

.main .list .no-project {
	padding: 30rpx 30rpx;
	font-size: 28rpx;
}

/* 新的背景图片卡片样式 */
.main .list .meet-card-new {
	width: 100%;
	height: 280rpx;
	position: relative;
	border-radius: 24rpx;
	margin-bottom: 24rpx;
	overflow: hidden;
	box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 背景图片层 */
.meet-card-new .card-bg {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 1;
}

.meet-card-new .bg-img {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

.meet-card-new .bg-placeholder {
	width: 100%;
	height: 100%;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 白色渐变遮罩 - 从上1/4开始渐变，中间完成 */
.meet-card-new .card-gradient-mask {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	height: 85%;
	background: linear-gradient(to top,
		rgba(255, 255, 255, 1) 0%,
		rgba(255, 255, 255, 1) 20%,
		rgba(255, 255, 255, 0.96) 35%,
		rgba(255, 255, 255, 0.88) 50%,
		rgba(255, 255, 255, 0.72) 65%,
		rgba(255, 255, 255, 0.45) 80%,
		transparent 100%);
}

/* 内容层：左右布局 */
.meet-card-new .card-layout {
	position: relative;
	z-index: 2;
	height: 100%;
	display: flex;
	flex-direction: row;
	align-items: flex-end;
	padding: 24rpx 28rpx 28rpx;
}

/* 左侧区域：标题和时间段 */
.meet-card-new .card-left {
	flex: 1;
	display: flex;
	flex-direction: column;
	gap: 8rpx;
	max-height: 200rpx;
	justify-content: flex-end;
}

.meet-card-new .card-title-new {
	font-size: 40rpx;
	font-weight: bold;
	color: #000;
	line-height: 1.3;
	max-width: 480rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	text-shadow: 0 1rpx 3rpx rgba(255, 255, 255, 0.8);
	flex-shrink: 0;
}

.meet-card-new .card-time-new {
	display: flex;
	align-items: center;
	font-size: 28rpx;
	color: #666;
	line-height: 1.4;
	padding-top: 2rpx;
}

/* 时间段标签容器 - 纵向排列 */
.meet-card-new .card-time-slots-new {
	display: flex;
	flex-direction: column;
	gap: 6rpx;
	max-height: 140rpx;
	overflow-y: auto;
	flex-shrink: 1;
}

/* 单个时间段标签 - 横向显示 */
.meet-card-new .time-slot-tag {
	display: inline-flex;
	align-items: center;
	padding: 6rpx 16rpx;
	background: linear-gradient(135deg, #fce4ec 0%, #f8bbd0 100%);
	color: #c2185b;
	font-size: 24rpx;
	font-weight: 600;
	border-radius: 18rpx;
	align-self: flex-start;
	box-shadow: 0 2rpx 8rpx rgba(252, 228, 236, 0.4);
	flex-shrink: 0;
}

/* 右侧区域：按钮 */
.meet-card-new .card-right {
	width: 160rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-shrink: 0;
}

.meet-card-new .book-btn {
	padding: 18rpx 28rpx;
	background: radial-gradient(ellipse at center,
		#5756B3 0%,
		#5756B3 40%,
		rgba(87, 86, 179, 0.85) 70%,
		rgba(87, 86, 179, 0.6) 90%,
		rgba(87, 86, 179, 0.3) 100%);
	color: #fff;
	font-size: 30rpx;
	font-weight: 600;
	border-radius: 44rpx;
	border: none;
	box-shadow: 0 6rpx 20rpx rgba(87, 86, 179, 0.4),
				0 0 40rpx rgba(87, 86, 179, 0.2);
	transition: all 0.3s;
}

.meet-card-new .book-btn::after {
	border: none;
}

.meet-card-new .book-btn:active {
	transform: scale(0.95);
	box-shadow: 0 2rpx 8rpx rgba(87, 86, 179, 0.5),
				0 0 20rpx rgba(87, 86, 179, 0.3);
}
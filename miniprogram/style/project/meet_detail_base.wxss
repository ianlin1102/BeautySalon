/* 居中的日期标题 */
.centered-date-header {
	background: linear-gradient(135deg, var(--projectColor, #6c5ce7), var(--projectCompareColor, #a29bfe));
	padding: 25rpx 20rpx;
	text-align: center;
}

.centered-date-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #fff;
	text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 时间段容器 */
.times-container {
	padding: 25rpx 0;
	background-color: #fff;
}

.no-times-text {
	text-align: center;
	padding: 40rpx 20rpx;
	font-size: 28rpx;
	color: #999;
}

/* 横向滚动时间段 */
.times-horizontal-scroll {
	width: 100%;
	white-space: nowrap;
}

.times-horizontal-wrapper {
	display: inline-flex;
	padding: 0 20rpx;
	gap: 15rpx;
}

.time-card {
	display: inline-flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background-color: #f8f9fa;
	border: 2rpx solid #e9ecef;
	border-radius: 16rpx;
	padding: 20rpx 25rpx;
	min-width: 180rpx;
	text-align: center;
	transition: all 0.3s ease;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.time-card:active {
	transform: scale(0.95);
}

/* 已预约状态 - 使用主题色高亮 */
.time-card.user-joined {
	background: linear-gradient(135deg, var(--projectColor, #6c5ce7), var(--projectCompareColor, #a29bfe));
	border-color: var(--projectColor, #6c5ce7);
	color: #fff;
	box-shadow: 0 4rpx 15rpx rgba(108, 92, 231, 0.3);
}

.time-card.user-joined .time-display {
	color: #fff;
	font-weight: bold;
}

.time-card.user-joined .joined-status {
	color: #fff;
	font-weight: bold;
}

/* 错误状态 */
.time-card.error {
	background-color: #f1f3f4;
	border-color: #dadce0;
	color: #9aa0a6;
}

.time-card.error .time-display {
	color: #9aa0a6;
}

/* 时间显示 */
.time-display {
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 8rpx;
	white-space: nowrap;
}

/* 状态显示 */
.status-display {
	font-size: 22rpx;
	line-height: 1.2;
}

.joined-status {
	color: #fff;
	font-weight: bold;
}

.limit-status {
	color: #666;
}

.error-status {
	color: #9aa0a6;
}

/* 可用状态悬停效果 */
.time-card:not(.error):not(.user-joined):hover {
	background-color: #f0f2f5;
	border-color: var(--projectColor, #6c5ce7);
	transform: translateY(-2rpx);
}


/* ========== Neon Theme - 霓虹主题公共样式 ========== */

/* 页面背景 - 极暗的夜店深空黑 */
.neon-page {
  background-color: #050511;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* ========== 玻璃态面板 ========== */
.glass-panel {
  background: rgba(20, 20, 35, 0.4);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  box-shadow: 0 16rpx 64rpx 0 rgba(0, 0, 0, 0.3);
}

.glass-panel-light {
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.05);
  border-radius: 32rpx;
}

/* ========== 呼吸光效动画 ========== */
@keyframes breathe-glow {
  0%, 100% {
    box-shadow: 0 0 10rpx var(--glow-color, rgba(0, 242, 255, 0.3)),
                inset 0 0 0 var(--glow-color, rgba(0, 242, 255, 0));
    border-color: var(--glow-color, rgba(0, 242, 255, 0.3));
  }
  50% {
    box-shadow: 0 0 30rpx var(--glow-color, rgba(0, 242, 255, 0.5)),
                inset 0 0 20rpx var(--glow-color, rgba(0, 242, 255, 0.1));
    border-color: var(--glow-color, rgba(0, 242, 255, 0.8));
  }
}

/* 青色呼吸动画 - 预约卡片 */
@keyframes breathe-cyan {
  0%, 100% {
    box-shadow: 0 0 0rpx rgba(0, 242, 255, 0), inset 0 0 0 rgba(0, 242, 255, 0);
    border-color: rgba(0, 242, 255, 0.3);
  }
  50% {
    box-shadow: 0 0 30rpx rgba(0, 242, 255, 0.2), inset 0 0 20rpx rgba(0, 242, 255, 0.05);
    border-color: rgba(0, 242, 255, 0.8);
  }
}

/* 紫色呼吸动画 - 卡包入口 (提亮版) */
@keyframes breathe-purple {
  0%, 100% {
    box-shadow: 0 0 0rpx rgba(189, 0, 255, 0), inset 0 0 0 rgba(189, 0, 255, 0);
    border-color: rgba(189, 0, 255, 0.3);
  }
  50% {
    box-shadow: 0 0 40rpx rgba(189, 0, 255, 0.3), inset 0 0 20rpx rgba(189, 0, 255, 0.05);
    border-color: rgba(189, 0, 255, 0.9);
  }
}

/* 背景光斑脉动 */
@keyframes pulse-glow {
  0% { opacity: 0.3; transform: scale(0.9); }
  100% { opacity: 0.6; transform: scale(1.1); }
}

/* 头像光环旋转色相 */
@keyframes spin-glow {
  0% { filter: hue-rotate(0deg); }
  100% { filter: hue-rotate(360deg); }
}

/* 进度条扫光特效 */
@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

@keyframes fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slide-up {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 霓虹按钮 ========== */
.neon-button {
  background: linear-gradient(135deg, #ff00de, #00f2ff);
  color: #fff;
  font-weight: 600;
  border: none;
  border-radius: 36rpx;
  box-shadow: 0 0 16rpx rgba(255, 0, 222, 0.5), 0 0 8rpx rgba(0, 242, 255, 0.4);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
  transition: all 0.2s;
}

.neon-button:active {
  transform: scale(0.95);
  filter: brightness(1.2);
}

.neon-button::after {
  border: none;
}

/* 次要按钮 */
.neon-button-secondary {
  background: rgba(255, 255, 255, 0.08);
  color: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  border-radius: 36rpx;
  transition: all 0.2s;
}

.neon-button-secondary:active {
  background: rgba(255, 255, 255, 0.15);
  transform: scale(0.95);
}

.neon-button-secondary::after {
  border: none;
}

/* ========== 霓虹文本颜色 ========== */
.text-neon-primary {
  color: #00f2ff;
}

.text-neon-purple {
  color: #bd00ff;
}

.text-neon-gold {
  color: #FFD700;
}

.text-neon-white {
  color: #ffffff;
}

.text-neon-muted {
  color: rgba(255, 255, 255, 0.7);
}

.text-neon-dim {
  color: rgba(255, 255, 255, 0.4);
}

/* ========== 等级颜色系统 (CSS Variables) ========== */

/* 1. 新手会员 (Novice) - 灰色系 */
.theme-novice {
  --main-color: #95a5a6;
  --gradient-start: #bdc3c7;
  --gradient-end: #7f8c8d;
  --shadow-color: rgba(149, 165, 166, 0.4);
}

/* 2. 铜牌会员 (Bronze) - 铜色系 */
.theme-bronze {
  --main-color: #CD7F32;
  --gradient-start: #EDC9AF;
  --gradient-end: #A0522D;
  --shadow-color: rgba(205, 127, 50, 0.6);
}

/* 3. 银牌会员 (Silver) - 银色系 */
.theme-silver {
  --main-color: #C0C0C0;
  --gradient-start: #E8E8E8;
  --gradient-end: #A9A9A9;
  --shadow-color: rgba(192, 192, 192, 0.5);
}

/* 4. 金牌会员 (Gold) - 金色系 */
.theme-gold {
  --main-color: #FFD700;
  --gradient-start: #FFFACD;
  --gradient-end: #FFA500;
  --shadow-color: rgba(255, 215, 0, 0.8);
}

/* 5. 钻石会员 (Diamond) - 蓝色系 */
.theme-diamond {
  --main-color: #1e90ff;
  --gradient-start: #00f2ff;
  --gradient-end: #1e90ff;
  --shadow-color: rgba(30, 144, 255, 0.8);
}

/* 等级颜色快捷类 */
.level-color-1 { --level-color: #95a5a6; } /* 新手会员 - 灰色 */
.level-color-2 { --level-color: #CD7F32; } /* 铜牌会员 - 铜色 */
.level-color-3 { --level-color: #C0C0C0; } /* 银牌会员 - 银色 */
.level-color-4 { --level-color: #FFD700; } /* 金牌会员 - 金色 */
.level-color-5 { --level-color: #1e90ff; } /* 钻石会员 - 蓝色 */

/* ========== 状态颜色 ========== */
.status-success {
  color: #00f2ff;
  border-color: #00f2ff;
  background: rgba(0, 242, 255, 0.1);
}

.status-warning {
  color: #FFD700;
  border-color: #FFD700;
  background: rgba(255, 215, 0, 0.1);
}

.status-muted {
  color: #888;
  border-color: #666;
  background: transparent;
}

/* ========== 左侧装饰条 ========== */
.left-accent-bar {
  position: relative;
}

.left-accent-bar::before {
  content: '';
  position: absolute;
  left: 0;
  top: 20%;
  bottom: 20%;
  width: 8rpx;
  border-radius: 0 8rpx 8rpx 0;
  background: var(--accent-color, #00f2ff);
  box-shadow: 4rpx 0 20rpx var(--accent-shadow, rgba(0, 242, 255, 0.4));
}

/* ========== 图标样式 ========== */
.neon-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.neon-icon-primary {
  background: rgba(0, 242, 255, 0.15);
  color: #00f2ff;
  border: 1rpx solid rgba(0, 242, 255, 0.3);
  box-shadow: 0 0 10rpx rgba(0, 242, 255, 0.2);
}

.neon-icon-purple {
  background: rgba(189, 0, 255, 0.15);
  color: #bd00ff;
  border: 1rpx solid rgba(189, 0, 255, 0.3);
  box-shadow: 0 0 10rpx rgba(189, 0, 255, 0.2);
}

.neon-icon-orange {
  background: rgba(255, 159, 67, 0.2);
  color: #ff9f43;
}

.neon-icon-grey {
  background: rgba(255, 255, 255, 0.08);
  color: rgba(255, 255, 255, 0.6);
}

/* ========== 分割线 ========== */
.neon-divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
}

/* ========== 背景装饰光斑 ========== */
.bg-glow {
  position: fixed;
  border-radius: 50%;
  pointer-events: none;
  z-index: 0;
  filter: blur(160rpx);
}

.bg-glow-1 {
  top: -100rpx;
  left: -100rpx;
  width: 500rpx;
  height: 500rpx;
  opacity: 0.5;
  background: radial-gradient(circle, #7d00ff 0%, transparent 70%);
  animation: pulse-glow 6s infinite alternate;
}

.bg-glow-2 {
  top: 300rpx;
  right: -120rpx;
  width: 400rpx;
  height: 400rpx;
  opacity: 0.4;
  background: radial-gradient(circle, #00f2ff 0%, transparent 70%);
  animation: pulse-glow 5s infinite alternate-reverse;
}

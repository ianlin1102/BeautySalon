@import "../../../../style/project/base/detail.wxss";
@import "../../skin/skin.wxss"; 
@import "../../../../style/project/meet_join_base.wxss";

/* 全局背景 */
page {
	background-color: #000000 !important;
	min-height: 100vh;
}

.main {
	padding: 30rpx !important;
	background-color: #000000 !important;
}

/* 统一卡片样式 - 玻璃拟态与霓虹边框 */
.form-box.card-project, 
.form-box,
.article-box .article {
	background-color: rgba(255, 255, 255, 0.03) !important;
	border: 1px solid rgba(6, 182, 212, 0.2) !important; /* 改回天蓝色边框 */
	border-radius: 24rpx !important;
	box-shadow: none !important;
	color: #fff !important;
	margin-bottom: 30rpx !important;
	overflow: hidden;
}

/* 关键：修改所有可能出现的分隔线颜色 - 保持粉红色 */
.form-group,
.form-box .form-group,
.main .form-group {
	border-bottom: 1rpx solid rgba(217, 70, 239, 0.3) !important; /* 粉红分隔线 */
	border-top: none !important; /* 禁用基础样式中的灰色顶边线 */
	background-color: transparent !important;
	padding: 40rpx 20rpx !important; /* 增加内边距 */
	min-height: 110rpx;
	display: flex;
	align-items: center;
	justify-content: space-between; /* 改为两端对齐 */
}

/* 确保中间内容区域占据 95% 宽度 */
.form-group > view,
.form-group > picker,
.form-group > cmpt-form-show {
	width: 95% !important;
	margin: 0 auto;
}

/* 针对 cmpt-form-show 内部可能存在的 border 进行全局穿透覆盖 */
.form-group::after, .form-group::before {
	display: none !important;
}

/* 确保 dotted 线条也变色 - 保持粉红 */
.modal-check-info .item {
	border-bottom: 1rpx dotted rgba(217, 70, 239, 0.3) !important;
}

/* 特殊处理 picker 内部显示 */
.form-group picker {
	display: block;
}

/* 去掉最后一个分组的底边线 */
.form-group:last-child {
	border-bottom: none !important;
}

/* 标题样式 - 天蓝色霓虹发光 */
.form-box .title,
.article-box .article .title {
	color: #06b6d4 !important; /* 天蓝色 */
	font-weight: 900 !important;
	text-shadow: 0 0 10rpx rgba(6, 182, 212, 0.5); /* 霓虹发光 */
}

/* 调整表单布局比例：修复标题截断和排版混乱问题 */
.form-group .title {
	width: auto !important;
	min-width: 160rpx; /* 略微增加最小宽度以保持对齐 */
	margin-right: 20rpx;
	flex-shrink: 0;
	color: #06b6d4 !important; /* 确保标题为天蓝色 */
	text-align: left;
}

/* 针对单纯展示标题的 form-group (如第一个和分隔标题)，允许其占满 */
.form-group .title:only-child, 
.form-group .title.text-cut {
	width: 100% !important;
	max-width: none !important;
	flex: 1;
}

/* 输入区域占据剩余空间 */
.form-group input, 
.form-group .picker-base, 
.form-group picker,
.form-group .form-text {
	flex: 1 !important;
	width: 100% !important;
	text-align: right;
	color: #ffffff !important;
}

/* 特殊标签 (更改时段等) - 改回橙色或青色 */
.tag.bg-orange.light {
	background-color: rgba(6, 182, 212, 0.15) !important; /* 改回青色系背景 */
	color: #06b6d4 !important; /* 改回青色文字 */
	border: 1px solid rgba(6, 182, 212, 0.3);
}

/* 图标颜色 - 改回天蓝色 */
.icon-calendar, .icon-warn {
	color: #06b6d4 !important;
}

/* 必填星号 - 保持红色或粉红醒目 */
.text-red {
	color: #ff0000 !important;
	text-shadow: 0 0 5rpx rgba(255, 0, 255, 0.6);
}

/* 提交按钮 - 改回青紫渐变 */
.btn-project {
	margin-top: 60rpx !important;
	background: linear-gradient(135deg, #06b6d4, #3b82f6, #d946ef) !important;
	color: #ffffff !important;
	font-weight: 900 !important;
	border-radius: 100rpx !important;
	height: 100rpx !important;
	line-height: 100rpx !important;
	box-shadow: 0 0 30rpx rgba(6, 182, 212, 0.4) !important; /* 青色阴影 */
	border: none !important;
}

.btn-project[disabled] {
	background: rgba(255, 255, 255, 0.1) !important;
	color: rgba(255, 255, 255, 0.2) !important;
	box-shadow: none !important;
}

/* 针对 time-container 的样式补丁 (如果存在该 class) */
.time-container {
	background-color: rgba(255, 255, 255, 0.02) !important;
	border: 1px solid rgba(6, 182, 212, 0.2) !important; /* 改回青色边框 */
	border-radius: 15rpx;
	padding: 20rpx;
	color: #fff;
}

/* Checkbox 样式微调 - 去掉默认样式，仅选中时高亮 */
checkbox .wx-checkbox-input {
	border-color: rgba(6, 182, 212, 0.5) !important;
	background: transparent !important;
	border-radius: 8rpx !important;
	width: 40rpx !important;
	height: 40rpx !important;
	transition: all 0.2s ease;
}

/* 选中状态 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
	background: #06b6d4 !important;
	border-color: #06b6d4 !important;
}

/* 选中后的钩子图标颜色 (如果不想显示钩子可以设为透明) */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
	color: #fff !important;
	font-size: 30rpx !important;
}

.btn-project[disabled] {
	background: rgba(255, 255, 255, 0.1) !important;
	color: rgba(255, 255, 255, 0.2) !important;
	box-shadow: none !important;
}

/* 选择器与输入内容 */
.form-text, input, textarea {
	color: #ffffff !important;
}

/* 针对 time-container 的样式补丁 (如果存在该 class) */
.time-container {
	background-color: rgba(255, 255, 255, 0.02) !important;
	border: 1px solid rgba(217, 70, 239, 0.2) !important;
	border-radius: 15rpx;
	padding: 20rpx;
	color: #fff;
}

/* 针对 cmpt-form-show 内部样式的穿透处理 (尝试) */
.form-group .title {
	color: #06b6d4 !important;
}
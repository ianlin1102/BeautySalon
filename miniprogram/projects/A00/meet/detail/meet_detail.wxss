@import "../../../../style/project/base/appt.wxss";
@import "../../skin/skin.wxss"; 
@import "../../../../style/project/meet_detail_base.wxss";

page {
	background-color: #000000;
}

.main {
	padding: 0rpx 0rpx !important;
	background-color: #000000;
}

.meet-no-time {
	width: 100%;
	height: calc(100vh - 293rpx);
	background-color: #000000;
	padding: 80rpx 30rpx 30rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: flex-start;
	font-size: 30rpx;
	color: rgba(255, 255, 255, 0.5);
}

.meet-no-time text {
	font-size: 90rpx;
	color: #06b6d4;
	text-shadow: 0 0 20rpx rgba(6, 182, 212, 0.5);
}

/* 顶部区域 */
.top-area {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: flex-start;
	background-color: #000000;
	border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	position: fixed;
	top: 0;
	z-index: 999;
}

.top-area .top-title {
	width: 100%;
	font-size: 38rpx;
	color: #06b6d4;
	line-height: 110rpx;
	padding: 0 20rpx;
	font-weight: bold;
	text-shadow: 0 0 10rpx rgba(6, 182, 212, 0.3);
}

.top-area .top-menu {
	width: 100%;
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.6);
	line-height: 80rpx;
	padding: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	font-weight: bold;
	background-color: rgba(255, 255, 255, 0.05);
}

.top-area .top-menu .item {
	padding: 0 20rpx;
	position: relative;
} 

.top-area .top-menu .item.cur {
	color: #ffffff;
}

.top-area .top-menu .item.cur::after {
	position: absolute;
	bottom: 0;
	left: 50%;
	transform: translateX(-50%);
	width: 40rpx;
	text-align: center;
	height: 6rpx;
	background: linear-gradient(to right, #06b6d4, #d946ef);
	border-radius: 10rpx;
	content: " ";
	animation: hightlightning_in 0.3s ease-out;
}

@keyframes hightlightning_in {
	from {
		transform: scaleX(0);
	}

	to {
		transform: scaleX(1);
	}
}

.big-box {
	width: 100%;
	padding: 0;
	margin-top: 193rpx;
	display: flex;
	background-color: #000000;
}

/*** 详情盒子 ***/
.article-box {
	box-sizing: border-box;
	width: 100%;
	padding: 30rpx 20rpx;
	background-color: #000000;
}

.article-box .article {
	background-color: rgba(255, 255, 255, 0.03);
	padding: 10rpx 30rpx;
	border-radius: 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	position: relative;
	border: 1px solid rgba(6, 182, 212, 0.2);
}

.article-box .article .info {
	color: rgba(255, 255, 255, 0.7);
	margin: 0rpx 0rpx;
	box-sizing: border-box;
	width: 100%;
	line-height: 1.6;
	display: flex;
	justify-content: flex-start;
	align-items: flex-start;
	padding: 10rpx 0rpx 10rpx;
}

.article-box .article .info .info-right {
	height: 100%;
	flex: 1;
	font-size: 26rpx;
}

.article-box .article .info .info-end {
	height: 100%;
	width: 40rpx;
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.3);
}


.article-box .article .content {
	margin-top: 24rpx;
	color: rgba(255, 255, 255, 0.8);
	font-size: 28rpx;
	text-align: justify;
	line-height: 1.6;
}

/* 垂直导航 */
.vertical-box {
	display: flex;
	width: 100%;
	background-color: #000000;
}

.days-scroll {
	background-color: #000000;
}

.vertical-nav.nav {
	width: 200rpx;
	white-space: initial;
	background-color: #000000;
}

.vertical-nav.nav .item {
	width: 100%;
	text-align: center; 
	margin: 0;
	border: none;
	height: 100rpx;
	line-height: 100rpx;
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
	color: rgba(255, 255, 255, 0.5);
	font-size: 26rpx;
}

.vertical-nav.nav .item.cur {
	background-color: rgba(6, 182, 212, 0.1);
	font-weight: bold;
	color: #06b6d4;
}

.vertical-nav.nav .item.cur::after {
	content: "";
	width: 6rpx;
	height: 40rpx;
	border-radius: 10rpx;
	position: absolute;
	background: linear-gradient(to bottom, #06b6d4, #d946ef);
	top: 50%;
	transform: translateY(-50%);
	right: 0rpx;
}

.vertical-main {
	background-color: #080808;
	flex: 1;
}

.vertical-main .vertical-main-box {
	padding: 20rpx 20rpx 0rpx 20rpx;
	width: 100%;
}

.vertical-main .text-list {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	justify-content: flex-start;
	align-items: center;
	background-color: transparent;
	padding-bottom: 20rpx;
}

.vertical-main .text-list .item {
	width: 50%;
	padding: 10rpx;
}

.vertical-main .text-list .item .time-text {
	width: 100%;
	border-radius: 15rpx;
	border: 1px solid rgba(255, 255, 255, 0.1);
	background-color: rgba(255, 255, 255, 0.05);
	height: 80rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	color: #ffffff;
}

.vertical-main .text-list .item .time-text.error {
	background-color: rgba(255, 255, 255, 0.02);
	border-color: rgba(255, 255, 255, 0.05);
	color: rgba(255, 255, 255, 0.2);
}

.vertical-main .text-list .item .time-text.limit {
	height: 110rpx;
}

.vertical-main .text-list .item .time-text .limit-text {
	font-size: 22rpx;
	color: rgba(255, 255, 255, 0.4);
}

/* 用户已预约的时间段样式 */
.vertical-main .text-list .item .time-text.user-joined {
	background-color: rgba(6, 182, 212, 0.15);
	border-color: #06b6d4;
	color: #06b6d4;
	box-shadow: 0 0 15rpx rgba(6, 182, 212, 0.3);
}

/* 覆盖日期标题样式 */
.centered-date-header {
	background-color: rgba(255, 255, 255, 0.03) !important;
	border-radius: 10rpx;
	padding: 20rpx;
	margin-bottom: 10rpx;
}

.centered-date-title {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.6) !important;
}

/* 覆盖日期容器样式 */
.day-container {
	background-color: rgba(255, 255, 255, 0.03) !important;
	border: 1px solid rgba(6, 182, 212, 0.2);
	box-shadow: none !important;
	border-radius: 20rpx;
	margin: 20rpx;
	overflow: hidden;
}

/* 覆盖时间段卡片样式 */
.time-card {
	background-color: rgba(255, 255, 255, 0.05) !important;
	border: 1px solid rgba(255, 255, 255, 0.1) !important;
	box-shadow: none !important;
	color: #fff !important;
}

.time-card .time-display {
	color: rgba(255, 255, 255, 0.9) !important;
}

.time-card .limit-status {
	color: rgba(255, 255, 255, 0.5) !important;
}

/* 覆盖已预约时间段样式 - 增强霓虹效果 */
.time-card.user-joined {
	background: linear-gradient(135deg, rgba(6, 182, 212, 0.3), rgba(217, 70, 239, 0.3)) !important;
	border: 2rpx solid #00FFFF !important;
	box-shadow: 0 0 20rpx rgba(0, 255, 255, 0.4), inset 0 0 10rpx rgba(0, 255, 255, 0.2) !important;
}

.time-card.user-joined .time-display {
	color: #00FFFF !important;
	text-shadow: 0 0 15rpx rgba(0, 255, 255, 0.6);
	font-weight: 900 !important;
}

.time-card.user-joined .joined-status {
	color: #FF00FF !important;
	text-shadow: 0 0 10rpx rgba(255, 0, 255, 0.5);
	font-weight: bold;
}

/* 覆盖不可用/错误状态 */
.time-card.error {
	background-color: rgba(255, 255, 255, 0.02) !important;
	border-color: rgba(255, 255, 255, 0.05) !important;
}

.time-card.error .time-display,
.time-card.error .error-status {
	color: rgba(255, 255, 255, 0.2) !important;
}

/* 覆盖时间段容器背景 */
.times-container {
	background-color: transparent !important;
}
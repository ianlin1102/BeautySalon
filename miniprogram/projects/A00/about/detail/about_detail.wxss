@import '../../skin/skin.wxss';

page {
	background-color: #ffffff;
}

.about-detail {
	padding: 30rpx;
}

.about-title {
	font-size: 40rpx;
	font-weight: bold;
	color: #333333;
	margin-bottom: 30rpx;
	text-align: center;
}

.about-images {
	margin-bottom: 30rpx;
}

.about-image {
	width: 100%;
	border-radius: 12rpx;
	margin-bottom: 20rpx;
}

.about-content {
	margin-top: 20rpx;
}

.content-text {
	font-size: 28rpx;
	line-height: 1.8;
	color: #666666;
	margin-bottom: 20rpx;
	white-space: pre-wrap;
	word-wrap: break-word;
}

.content-image {
	margin-bottom: 20rpx;
}

.content-image image {
	width: 100%;
	border-radius: 12rpx;
}

.empty-state {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 100rpx 0;
}

.empty-state .icon-info {
	font-size: 80rpx;
}

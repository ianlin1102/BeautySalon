@import '../../../../style/project/neon_theme.wxss';
@import '../../skin/skin.wxss';

page {
	background-color: #050511;
	color: #ffffff;
}

.about-detail {
	padding: 40rpx 30rpx;
	position: relative;
	z-index: 1;
}

.about-title {
	font-size: 44rpx;
	font-weight: bold;
	margin-bottom: 40rpx;
	text-align: center;
	text-shadow: 0 0 15rpx rgba(0, 242, 255, 0.6);
	letter-spacing: 2rpx;
}

.about-images {
	margin-bottom: 40rpx;
}

.about-image {
	width: 100%;
	border-radius: 24rpx;
	margin-bottom: 24rpx;
	border: 1rpx solid rgba(255, 255, 255, 0.1);
	box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.5);
}

.about-content {
	margin-top: 30rpx;
	padding: 30rpx;
	border-radius: 24rpx;
}

.content-text {
	font-size: 30rpx;
	line-height: 1.8;
	color: rgba(255, 255, 255, 0.85);
	margin-bottom: 24rpx;
	white-space: pre-wrap;
	word-wrap: break-word;
	text-align: justify;
}

.content-image {
	margin-bottom: 24rpx;
}

.content-image image {
	width: 100%;
	border-radius: 16rpx;
	box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
}

.empty-state {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 150rpx 0;
}

.empty-state .icon-info {
	font-size: 100rpx;
	margin-bottom: 20rpx;
}
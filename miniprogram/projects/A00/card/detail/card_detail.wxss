.main {
	min-height: 100vh;
	background-color: #f5f5f5;
	padding: 20rpx;
}

/* 卡项信息卡片 */
.card-info-section {
	background: #fff;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 20rpx;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 卡项头部 */
.card-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 25rpx;
	padding-bottom: 20rpx;
	border-bottom: 1rpx solid #eee;
}

.card-name {
	font-size: 36rpx;
	font-weight: bold;
	color: #333;
	flex: 1;
}

.card-status {
	padding: 8rpx 16rpx;
	border-radius: 20rpx;
	font-size: 22rpx;
	color: #fff;
}

.status-0 {
	background: #909399;
}

.status-1 {
	background: #67c23a;
}

.status-2 {
	background: #f56c6c;
}

/* 唯一识别码 */
.card-unique-id {
	background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
	border-radius: 15rpx;
	padding: 20rpx 25rpx;
	margin-bottom: 30rpx;
	display: flex;
	align-items: center;
	box-shadow: 0 2rpx 10rpx rgba(252, 182, 159, 0.3);
}

.unique-id-label {
	font-size: 26rpx;
	color: #8b4513;
	margin-right: 15rpx;
	font-weight: bold;
}

.unique-id-value {
	flex: 1;
	font-size: 32rpx;
	font-weight: bold;
	color: #8b4513;
	font-family: 'Courier New', monospace;
	letter-spacing: 3rpx;
}

.copy-btn {
	padding: 10rpx 24rpx;
	background: rgba(139, 69, 19, 0.2);
	border-radius: 25rpx;
	font-size: 24rpx;
	color: #8b4513;
	font-weight: bold;
}

/* 统计信息 */
.stats-section {
	margin-bottom: 25rpx;
}

.stats-row {
	display: flex;
	justify-content: space-around;
	align-items: center;
	margin-bottom: 25rpx;
}

.stat-item {
	flex: 1;
	text-align: center;
}

.stat-label {
	display: block;
	font-size: 24rpx;
	color: #999;
	margin-bottom: 12rpx;
}

.stat-value {
	display: block;
	font-size: 40rpx;
	font-weight: bold;
	color: #333;
}

.stat-value.remain {
	color: #409eff;
}

.stat-value.used {
	color: #999;
}

.stat-divider {
	width: 2rpx;
	height: 60rpx;
	background: #e0e0e0;
}

/* 进度条区域 */
.progress-section {
	margin-top: 20rpx;
}

.progress-bar {
	height: 12rpx;
	background: #e0e0e0;
	border-radius: 10rpx;
	overflow: hidden;
	margin-bottom: 10rpx;
}

.progress-fill {
	height: 100%;
	background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
	transition: width 0.3s;
	border-radius: 10rpx;
}

.progress-text {
	text-align: center;
	font-size: 22rpx;
	color: #666;
}

/* 时间信息 */
.time-info {
	background: #f9f9f9;
	border-radius: 10rpx;
	padding: 20rpx;
}

.time-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 10rpx 0;
}

.time-item:not(:last-child) {
	border-bottom: 1rpx solid #eee;
}

.time-label {
	font-size: 26rpx;
	color: #666;
}

.time-value {
	font-size: 26rpx;
	color: #333;
}

.time-value.permanent {
	color: #67c23a;
	font-weight: bold;
}

/* 使用记录标题 */
.section-title {
	display: flex;
	align-items: center;
	padding: 20rpx 10rpx;
	margin-bottom: 15rpx;
}

.title-icon {
	font-size: 32rpx;
	margin-right: 10rpx;
}

.title-text {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

.title-count {
	font-size: 24rpx;
	color: #999;
	margin-left: 10rpx;
}

/* 使用记录列表 */
.records-list {
	background: #fff;
	border-radius: 20rpx;
	padding: 20rpx;
}

.record-item {
	display: flex;
	padding: 25rpx;
	border-radius: 15rpx;
	background: #fafafa;
	margin-bottom: 15rpx;
}

.record-item:last-child {
	margin-bottom: 0;
}

.record-left {
	margin-right: 20rpx;
}

.record-type {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 24rpx;
	font-weight: bold;
	color: #fff;
}

.type-add {
	background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);
}

.type-use {
	background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.record-main {
	flex: 1;
}

.record-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 10rpx;
}

.record-change {
	font-size: 32rpx;
	font-weight: bold;
}

.change-add {
	color: #67c23a;
}

.change-use {
	color: #f56c6c;
}

.record-time {
	font-size: 22rpx;
	color: #999;
}

.record-reason {
	font-size: 26rpx;
	color: #666;
	margin-bottom: 8rpx;
	padding: 10rpx;
	background: #fff;
	border-radius: 8rpx;
}

.record-balance {
	font-size: 24rpx;
	color: #999;
}

/* 空状态 */
.empty-state {
	text-align: center;
	padding: 100rpx 0;
}

.empty-icon {
	font-size: 120rpx;
	display: block;
	margin-bottom: 20rpx;
}

.empty-text {
	font-size: 28rpx;
	color: #999;
}

/* 加载状态 */
.loading,
.no-more {
	text-align: center;
	padding: 40rpx 0;
	font-size: 24rpx;
	color: #999;
}

@import "../../../../style/project/neon_theme.wxss";

page {
	background-color: #050511;
	padding-bottom: 60rpx;
}

.main {
	min-height: 100vh;
	padding: 20rpx;
	position: relative;
	z-index: 1;
}

/* 卡项信息卡片 */
.card-info-section {
	background: rgba(255, 255, 255, 0.03);
	backdrop-filter: blur(10px);
	-webkit-backdrop-filter: blur(10px);
	border: 1rpx solid rgba(255, 255, 255, 0.05);
	border-radius: 32rpx;
	padding: 40rpx 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 16rpx 64rpx 0 rgba(0, 0, 0, 0.3);
}

/* 卡项头部 */
.card-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 30rpx;
	padding-bottom: 20rpx;
	border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.card-name {
	font-size: 38rpx;
	font-weight: bold;
	color: #fff;
	flex: 1;
}

.card-status {
	padding: 8rpx 20rpx;
	border-radius: 30rpx;
	font-size: 22rpx;
	color: #fff;
	font-weight: 600;
}

.status-0 {
	background: rgba(156, 163, 175, 0.2);
	color: #9ca3af;
	border: 1rpx solid rgba(156, 163, 175, 0.3);
}

.status-1 {
	background: rgba(0, 242, 255, 0.15);
	color: #00f2ff;
	border: 1rpx solid rgba(0, 242, 255, 0.3);
	box-shadow: 0 0 15rpx rgba(0, 242, 255, 0.2);
}

.status-2 {
	background: rgba(244, 63, 94, 0.15);
	color: #fb7185;
	border: 1rpx solid rgba(244, 63, 94, 0.3);
}

/* 唯一识别码 */
.card-unique-id {
	background: linear-gradient(135deg, rgba(255, 0, 222, 0.15) 0%, rgba(0, 242, 255, 0.1) 100%);
	border: 1rpx solid rgba(255, 255, 255, 0.1);
	border-radius: 20rpx;
	padding: 24rpx 30rpx;
	margin-bottom: 40rpx;
	display: flex;
	align-items: center;
}

.unique-id-label {
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.6);
	margin-right: 20rpx;
}

.unique-id-value {
	flex: 1;
	font-size: 34rpx;
	font-weight: bold;
	color: #fff;
	font-family: monospace;
	letter-spacing: 4rpx;
	text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.2);
}

.copy-btn {
	padding: 8rpx 24rpx;
	background: rgba(255, 255, 255, 0.1);
	border-radius: 30rpx;
	font-size: 24rpx;
	color: #fff;
	font-weight: 500;
	border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.copy-btn:active {
	background: rgba(255, 255, 255, 0.2);
}

/* 统计信息 */
.stats-section {
	margin-bottom: 30rpx;
}

.stats-row {
	display: flex;
	justify-content: space-around;
	align-items: center;
	margin-bottom: 30rpx;
}

.stat-item {
	flex: 1;
	text-align: center;
}

.stat-label {
	display: block;
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.5);
	margin-bottom: 12rpx;
}

.stat-value {
	display: block;
	font-size: 44rpx;
	font-weight: bold;
	color: #fff;
}

.stat-value.remain {
	color: #00f2ff;
	text-shadow: 0 0 15rpx rgba(0, 242, 255, 0.3);
}

.stat-value.used {
	color: rgba(255, 255, 255, 0.4);
}

.stat-divider {
	width: 1rpx;
	height: 60rpx;
	background: rgba(255, 255, 255, 0.1);
}

/* 进度条区域 */
.progress-section {
	margin-top: 30rpx;
	padding: 0 10rpx;
}

.progress-bar {
	height: 14rpx;
	background: rgba(255, 255, 255, 0.05);
	border-radius: 10rpx;
	overflow: hidden;
	margin-bottom: 16rpx;
	border: 1rpx solid rgba(255, 255, 255, 0.05);
}

.progress-fill {
	height: 100%;
	background: linear-gradient(90deg, #ff00de 0%, #00f2ff 100%);
	box-shadow: 0 0 15rpx rgba(0, 242, 255, 0.4);
	transition: width 0.5s ease-in-out;
	border-radius: 10rpx;
	position: relative;
}

.progress-fill::after {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
	animation: shimmer 2s infinite;
}

.progress-text {
	text-align: center;
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.5);
}

/* 时间信息 */
.time-info {
	background: rgba(255, 255, 255, 0.02);
	border-radius: 20rpx;
	padding: 24rpx;
	border: 1rpx solid rgba(255, 255, 255, 0.03);
}

.time-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 12rpx 0;
}

.time-item:not(:last-child) {
	border-bottom: 1rpx solid rgba(255, 255, 255, 0.03);
}

.time-label {
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.5);
}

.time-value {
	font-size: 26rpx;
	color: #fff;
}

.time-value.permanent {
	color: #FFD700;
	font-weight: bold;
	text-shadow: 0 0 10rpx rgba(255, 215, 0, 0.3);
}

/* 使用记录标题 */
.section-title {
	display: flex;
	align-items: center;
	padding: 30rpx 10rpx 20rpx;
	margin-top: 20rpx;
}

.title-icon {
	font-size: 32rpx;
	margin-right: 16rpx;
}

.title-text {
	font-size: 34rpx;
	font-weight: bold;
	color: #fff;
}

.title-count {
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.4);
	margin-left: 16rpx;
}

/* 使用记录列表 */
.records-list {
	padding: 10rpx 0;
}

.record-item {
	display: flex;
	padding: 30rpx;
	border-radius: 24rpx;
	background: rgba(255, 255, 255, 0.03);
	margin-bottom: 20rpx;
	border: 1rpx solid rgba(255, 255, 255, 0.05);
}

.record-item:active {
	background: rgba(255, 255, 255, 0.05);
}

.record-left {
	margin-right: 24rpx;
}

.record-type {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 24rpx;
	font-weight: bold;
	color: #fff;
}

.type-add {
	background: rgba(45, 212, 191, 0.15);
	color: #2dd4bf;
	border: 1rpx solid rgba(45, 212, 191, 0.3);
}

.type-use {
	background: rgba(255, 0, 222, 0.1);
	color: #ff00de;
	border: 1rpx solid rgba(255, 0, 222, 0.2);
}

.record-main {
	flex: 1;
}

.record-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 12rpx;
}

.record-change {
	font-size: 34rpx;
	font-weight: bold;
}

.change-add {
	color: #2dd4bf;
}

.change-use {
	color: #fb7185;
}

.record-time {
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.3);
}

.record-reason {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.7);
	margin-bottom: 12rpx;
	padding: 16rpx 20rpx;
	background: rgba(0, 0, 0, 0.2);
	border-radius: 12rpx;
}

.record-balance {
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.4);
}

/* 空状态 */
.empty-state {
	text-align: center;
	padding: 120rpx 0;
}

.empty-icon {
	font-size: 120rpx;
	display: block;
	margin-bottom: 30rpx;
	opacity: 0.5;
}

.empty-text {
	font-size: 30rpx;
	color: rgba(255, 255, 255, 0.3);
}

/* 加载状态 */
.loading,
.no-more {
	text-align: center;
	padding: 40rpx 0;
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.3);
}
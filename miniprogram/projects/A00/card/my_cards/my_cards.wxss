.main {
	min-height: 100vh;
	background-color: #f5f5f5;
	padding: 20rpx;
}

/* 汇总卡片 */
.summary-card {
	background: #fff;
	border-radius: 16rpx;
	padding: 24rpx 30rpx;
	margin-bottom: 20rpx;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.summary-title {
	color: #333;
	font-size: 28rpx;
	font-weight: bold;
	margin-bottom: 16rpx;
	padding-bottom: 12rpx;
	border-bottom: 1rpx solid #f0f0f0;
}

.summary-row {
	display: flex;
	flex-direction: column;
	gap: 8rpx;
}

.summary-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 8rpx 0;
}

.summary-label {
	color: #666;
	font-size: 26rpx;
}

.summary-value {
	color: #333;
	font-size: 28rpx;
	font-weight: normal;
}

.summary-divider {
	display: none;
}

/* 筛选栏 */
.filter-bar {
	background: #fff;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 20rpx;
}

.filter-group {
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
}

.filter-group:last-child {
	margin-bottom: 0;
}

.filter-label {
	font-size: 28rpx;
	color: #666;
	margin-right: 20rpx;
	min-width: 80rpx;
}

.filter-item {
	padding: 10rpx 20rpx;
	margin-right: 15rpx;
	background: #f5f5f5;
	border-radius: 30rpx;
	font-size: 24rpx;
	color: #666;
}

.filter-item.active {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: #fff;
}

/* 卡项列表 */
.card-list {
	margin-bottom: 20rpx;
}

.card-item {
	background: #fff;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 20rpx;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20rpx;
}

.card-name {
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
	flex: 1;
}

.card-status {
	padding: 6rpx 14rpx;
	border-radius: 20rpx;
	font-size: 20rpx;
	color: #fff;
}

.status-0 {
	background: #909399;
}

.status-1 {
	background: #67c23a;
}

.status-2 {
	background: #f56c6c;
}

/* 唯一识别码 */
.card-unique-id {
	background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
	border-radius: 10rpx;
	padding: 15rpx 20rpx;
	margin-bottom: 20rpx;
	display: flex;
	align-items: center;
}

.unique-id-label {
	font-size: 22rpx;
	color: #8b4513;
	margin-right: 10rpx;
}

.unique-id-value {
	flex: 1;
	font-size: 24rpx;
	font-weight: bold;
	color: #8b4513;
	font-family: 'Courier New', monospace;
	letter-spacing: 2rpx;
}

.copy-btn {
	padding: 6rpx 16rpx;
	background: rgba(139, 69, 19, 0.2);
	border-radius: 20rpx;
	font-size: 20rpx;
	color: #8b4513;
}

/* 卡项信息 */
.card-info {
	margin-bottom: 20rpx;
}

.info-row {
	display: flex;
	justify-content: space-around;
}

.info-item {
	flex: 1;
	text-align: center;
	padding: 20rpx;
	background: #f9f9f9;
	border-radius: 10rpx;
	margin: 0 10rpx;
}

.info-item:first-child {
	margin-left: 0;
}

.info-item:last-child {
	margin-right: 0;
}

.info-label {
	display: block;
	font-size: 22rpx;
	color: #999;
	margin-bottom: 10rpx;
}

.info-value {
	display: block;
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
}

.info-value.times {
	color: #409eff;
}

.info-value.balance {
	color: #e6a23c;
}

/* 进度条 */
.progress-bar {
	height: 8rpx;
	background: #e0e0e0;
	border-radius: 10rpx;
	overflow: hidden;
	margin-bottom: 20rpx;
}

.progress-fill {
	height: 100%;
	background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
	transition: width 0.3s;
}

/* 卡项底部 */
.card-footer {
	display: flex;
	justify-content: space-between;
	padding-top: 15rpx;
	border-top: 1rpx solid #eee;
}

.footer-text {
	font-size: 20rpx;
	color: #999;
}

/* 空状态 */
.empty-state {
	text-align: center;
	padding: 100rpx 0;
}

.empty-icon {
	font-size: 120rpx;
	display: block;
	margin-bottom: 20rpx;
}

.empty-text {
	font-size: 28rpx;
	color: #999;
}

/* 加载状态 */
.loading,
.no-more {
	text-align: center;
	padding: 40rpx 0;
	font-size: 24rpx;
	color: #999;
}

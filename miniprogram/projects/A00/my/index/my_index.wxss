@import "../../skin/skin.wxss";
@import "../../../../style/project/my_index_base.wxss";

page {
	background-color: #F6F7FF;
}

.main .upside,
.main .upside>image {
	height: 450rpx;
}

.main .upside {
	padding-top: 10rpx;
}

/*投影*/
.main .upside-shadow {
	box-shadow: unset
}

.main .upside .user-bar .detail .desc {
	color: #fff;
}

.main .down {
	margin-top: -150rpx;
	z-index: 9999;
}

.main .down .today .title {
	color: #333;
}

.today-card .today {
	position: relative;
	background-color: rgba(255, 255, 255, .8) !important;
}

/* 统计数据区域样式 */
.stats-section {
	display: flex;
	justify-content: space-around;
	padding: 40rpx 30rpx;
	margin-bottom: 30rpx;
	background-color: #fff;
}

.stat-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	flex: 1;
	position: relative;
}

.stat-item:active {
	opacity: 0.7;
}

.stat-number {
	font-size: 48rpx;
	font-weight: bold;
	color: #333;
	line-height: 1.2;
	margin-bottom: 10rpx;
}

.stat-label {
	font-size: 28rpx;
	color: #999;
}

/* 我的服务区域 */
.service-section {
	margin-bottom: 30rpx;
}

.section-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	padding: 20rpx 0;
	margin-bottom: 20rpx;
}

.service-grid {
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	gap: 0;
	background-color: #fff;
	padding: 0;
}

.service-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 50rpx 30rpx;
	position: relative;
	border-right: 1rpx solid #f0f0f0;
	border-bottom: 1rpx solid #f0f0f0;
}

.service-item:active {
	background-color: #f5f5f5;
}

/* 移除每行最后一个的右边框 */
.service-item:nth-child(3n) {
	border-right: none;
}

/* 移除最后一行的下边框 */
.service-item:nth-child(n+4) {
	border-bottom: none;
}

.service-icon {
	font-size: 60rpx;
	margin-bottom: 20rpx;
}

.service-label {
	font-size: 28rpx;
	color: #333;
}
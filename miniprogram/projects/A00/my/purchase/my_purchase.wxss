@import "../../../../style/project/neon_theme.wxss";

page {
	background-color: #050511;
	padding-bottom: 60rpx;
}

.loading-page {
	display: flex;
	align-items: center;
	justify-content: center;
}

.loading-text {
	color: rgba(255, 255, 255, 0.4);
	font-size: 28rpx;
	margin-top: 300rpx;
}

/* 背景光斑 */
.bg-glow {
	position: fixed;
	border-radius: 50%;
	pointer-events: none;
	z-index: 0;
	filter: blur(160rpx);
}

.bg-glow-1 {
	top: -100rpx;
	left: -100rpx;
	width: 500rpx;
	height: 500rpx;
	opacity: 0.4;
	background: radial-gradient(circle, #ff00de 0%, transparent 70%);
}

.bg-glow-2 {
	top: 400rpx;
	right: -120rpx;
	width: 400rpx;
	height: 400rpx;
	opacity: 0.3;
	background: radial-gradient(circle, #00f2ff 0%, transparent 70%);
}

.main {
	position: relative;
	z-index: 1;
	padding: 30rpx;
}

/* 月份分组头 */
.month-header {
	display: flex;
	align-items: center;
	padding: 30rpx 0 16rpx;
}

.month-indicator {
	width: 8rpx;
	height: 32rpx;
	background: #00f2ff;
	border-radius: 4rpx;
	margin-right: 16rpx;
	box-shadow: 0 0 10rpx rgba(0, 242, 255, 0.5);
}

.month-title {
	font-size: 30rpx;
	font-weight: bold;
	color: #fff;
	flex: 1;
}

.month-count {
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.4);
}

/* 购买记录卡片 */
.purchase-card {
	margin-bottom: 24rpx;
	overflow: hidden;
}

/* 凭证图片区域 */
.proof-section {
	position: relative;
	width: 100%;
	height: 360rpx;
	overflow: hidden;
}

.proof-img {
	width: 100%;
	height: 100%;
}

.proof-overlay {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	padding: 16rpx;
	background: linear-gradient(transparent, rgba(0, 0, 0, 0.5));
	display: flex;
	justify-content: flex-end;
}

.proof-hint {
	font-size: 22rpx;
	color: rgba(255, 255, 255, 0.6);
}

/* 购买详情 */
.purchase-detail {
	padding: 24rpx 28rpx;
}

.detail-header {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 20rpx;
}

.card-title {
	font-size: 30rpx;
	font-weight: bold;
	color: #fff;
	flex: 1;
	margin-right: 16rpx;
}

/* 状态标签 */
.status {
	font-size: 22rpx;
	padding: 4rpx 16rpx;
	border-radius: 20rpx;
	font-weight: 600;
	white-space: nowrap;
}

.status-0 {
	color: rgba(255, 255, 255, 0.5);
	background: rgba(255, 255, 255, 0.08);
	border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.status-1 {
	color: #ff9900;
	background: rgba(255, 153, 0, 0.12);
	border: 1rpx solid rgba(255, 153, 0, 0.3);
}

.status-2 {
	color: #2dd4bf;
	background: rgba(45, 212, 191, 0.12);
	border: 1rpx solid rgba(45, 212, 191, 0.3);
}

.status--1 {
	color: #f87171;
	background: rgba(248, 113, 113, 0.12);
	border: 1rpx solid rgba(248, 113, 113, 0.3);
}

/* 详情行 */
.detail-row {
	display: flex;
	align-items: flex-start;
	margin-bottom: 10rpx;
	font-size: 26rpx;
}

.detail-label {
	width: 80rpx;
	color: rgba(255, 255, 255, 0.4);
	flex-shrink: 0;
}

.detail-value {
	flex: 1;
	color: rgba(255, 255, 255, 0.8);
}

.detail-value.price {
	color: #ff00de;
	font-weight: bold;
	text-shadow: 0 0 10rpx rgba(255, 0, 222, 0.3);
}

.detail-value.dim {
	color: rgba(255, 255, 255, 0.45);
}

.detail-value.mono {
	font-family: monospace;
	font-size: 22rpx;
}

/* 空状态 */
.empty-state {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 160rpx 0;
}

.empty-icon {
	font-size: 80rpx;
	margin-bottom: 24rpx;
}

.empty-title {
	font-size: 30rpx;
	color: rgba(255, 255, 255, 0.5);
	margin-bottom: 12rpx;
}

.empty-hint {
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.3);
}

/* 加载更多 */
.load-more {
	text-align: center;
	padding: 40rpx 0;
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.3);
}

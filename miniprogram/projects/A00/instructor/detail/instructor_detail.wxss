@import "../../../../style/project/neon_theme.wxss";
@import "../../skin/skin.wxss";

page {
	background-color: #050511;
}

.instructor-detail-page {
	min-height: 100vh;
	padding-bottom: 40rpx;
	position: relative;
	overflow: hidden;
}

/* 背景光斑装饰 */
.instructor-detail-page::before {
	content: '';
	position: fixed;
	top: -100rpx;
	left: -100rpx;
	width: 500rpx;
	height: 500rpx;
	background: radial-gradient(circle, rgba(189, 0, 255, 0.3) 0%, transparent 70%);
	border-radius: 50%;
	pointer-events: none;
	z-index: 0;
	filter: blur(160rpx);
	animation: pulse-glow 6s infinite alternate;
}

.instructor-detail-page::after {
	content: '';
	position: fixed;
	bottom: 100rpx;
	right: -120rpx;
	width: 400rpx;
	height: 400rpx;
	background: radial-gradient(circle, rgba(0, 242, 255, 0.25) 0%, transparent 70%);
	border-radius: 50%;
	pointer-events: none;
	z-index: 0;
	filter: blur(160rpx);
	animation: pulse-glow 5s infinite alternate-reverse;
}

/* 导师头部区域 */
.instructor-header {
	background: linear-gradient(180deg, rgba(189, 0, 255, 0.15) 0%, transparent 100%);
	padding: 60rpx 40rpx 40rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	position: relative;
	z-index: 1;
}

.instructor-avatar-wrapper {
	position: relative;
	margin-bottom: 30rpx;
}

/* 头像霓虹光环 */
.instructor-avatar {
	width: 200rpx;
	height: 200rpx;
	border-radius: 50%;
	border: 6rpx solid rgba(189, 0, 255, 0.5);
	box-shadow: 0 0 40rpx rgba(189, 0, 255, 0.4),
	            0 0 80rpx rgba(189, 0, 255, 0.2);
	background: #1a1a2e;
	animation: breathe-avatar 3s infinite ease-in-out;
}

@keyframes breathe-avatar {
	0%, 100% {
		box-shadow: 0 0 40rpx rgba(189, 0, 255, 0.4),
		            0 0 80rpx rgba(189, 0, 255, 0.2);
	}
	50% {
		box-shadow: 0 0 60rpx rgba(189, 0, 255, 0.6),
		            0 0 100rpx rgba(189, 0, 255, 0.3);
	}
}

.instructor-basic-info {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.instructor-name {
	font-size: 40rpx;
	font-weight: bold;
	color: #ffffff;
	margin-bottom: 10rpx;
	text-shadow: 0 0 20rpx rgba(255, 255, 255, 0.3);
}

/* 导师内容区域 */
.instructor-content {
	padding: 0 30rpx;
	position: relative;
	z-index: 1;
}

/* 内容区块 - 玻璃态面板 */
.content-section {
	background: linear-gradient(160deg, rgba(189, 0, 255, 0.05) 0%, rgba(20, 20, 35, 0.4) 100%);
	backdrop-filter: blur(15px);
	-webkit-backdrop-filter: blur(15px);
	border-radius: 32rpx;
	padding: 30rpx;
	margin-bottom: 24rpx;
	border-top: 2rpx solid rgba(189, 0, 255, 0.3);
	border-left: 1rpx solid rgba(255, 255, 255, 0.08);
	border-right: 1rpx solid rgba(255, 255, 255, 0.05);
	border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
	box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.3);
}

.section-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #ffffff;
	margin-bottom: 20rpx;
	padding-bottom: 15rpx;
	border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
	display: flex;
	align-items: center;
	gap: 16rpx;
}

.section-title::before {
	content: '';
	width: 8rpx;
	height: 32rpx;
	background: #bd00ff;
	border-radius: 4rpx;
	box-shadow: 0 0 16rpx #bd00ff;
}

.section-text {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.7);
	line-height: 1.8;
	text-align: justify;
	white-space: pre-wrap;
}

/* 空状态 */
.empty-content {
	background: rgba(20, 20, 35, 0.4);
	backdrop-filter: blur(15px);
	-webkit-backdrop-filter: blur(15px);
	border-radius: 32rpx;
	padding: 100rpx 30rpx;
	text-align: center;
	margin-top: 40rpx;
	border: 1rpx solid rgba(255, 255, 255, 0.05);
	position: relative;
	z-index: 1;
}

.empty-icon {
	font-size: 80rpx;
	color: rgba(255, 255, 255, 0.15);
	margin-bottom: 20rpx;
}

.empty-text {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.4);
}

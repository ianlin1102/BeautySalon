@import "../../skin/skin.wxss";

page {
	background-color: #F6F7FF;
}

.instructor-detail-page {
	min-height: 100vh;
	padding-bottom: 40rpx;
}

/* 导师头部区域 */
.instructor-header {
	background: linear-gradient(180deg, #ffffff 0%, #F6F7FF 100%);
	padding: 60rpx 40rpx 40rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.instructor-avatar-wrapper {
	position: relative;
	margin-bottom: 30rpx;
}

.instructor-avatar {
	width: 200rpx;
	height: 200rpx;
	border-radius: 50%;
	border: 6rpx solid #ffffff;
	box-shadow: 0 8rpx 24rpx rgba(87, 86, 179, 0.15);
}

.instructor-basic-info {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.instructor-name {
	font-size: 40rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 10rpx;
}

/* 导师内容区域 */
.instructor-content {
	padding: 0 30rpx;
}

.content-section {
	background-color: #ffffff;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 20rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 20rpx;
	padding-bottom: 15rpx;
	border-bottom: 2rpx solid #f0f0f0;
}

.section-text {
	font-size: 28rpx;
	color: #666;
	line-height: 1.8;
	text-align: justify;
	white-space: pre-wrap;
}

/* 空状态 */
.empty-content {
	background-color: #ffffff;
	border-radius: 20rpx;
	padding: 100rpx 30rpx;
	text-align: center;
	margin-top: 40rpx;
}

.empty-text {
	font-size: 28rpx;
	color: #999;
}

@import "../../../../style/project/base/appt.wxss";
@import "../../skin/skin.wxss";
@import "../../../../style/project/default_index_base.wxss";

/* Carousel Section */
.carousel-section {
	width: 95%;
	height: 400rpx;
	margin: 30rpx auto 30rpx;
	border-radius: 40rpx;
	overflow: hidden;
}

.carousel {
	width: 100%;
	height: 100%;
	border-radius: 40rpx;
}

.carousel-image {
	width: 100%;
	height: 100%;
}

/* Main Menu */
.main-menu {
	padding: 0;
	margin: 0 auto;
	width: 95%;
}

.menu-grid {
	width: 100%;
	background-color: #fff;
	padding: 40rpx 30rpx;
	display: flex !important;
	flex-wrap: nowrap !important;
	justify-content: space-between !important;
	align-items: center;
	box-sizing: border-box;
}

.menu-item {
	flex: 1 !important;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.menu-item-inner {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 100%;
}

.menu-icon {
	width: 100rpx;
	height: 100rpx;
	margin-bottom: 10rpx;
}

.menu-icon image {
	width: 100%;
	height: 100%;
}

.menu-title {
	font-size: 26rpx;
	color: #333;
}

/* Instructor Section */
.instructor-section {
	width: 90%;
	margin: 0 auto 40rpx;
	padding: 30rpx;
	background-color: #fff;
	border: 2rpx solid #e0e0e0;
	border-radius: 20rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 30rpx;
}

.section-title {
	font-size: 36rpx;
	font-weight: 600;
	color: #333;
}

.section-more {
	font-size: 26rpx;
	color: #666;
	display: flex;
	align-items: center;
}

.section-more::after {
	content: '';
	display: inline-block;
	width: 0;
	height: 0;
	border-left: 10rpx solid #666;
	border-top: 6rpx solid transparent;
	border-bottom: 6rpx solid transparent;
	margin-left: 8rpx;
}

.instructor-swiper {
	height: 280rpx;
}

.instructor-swiper swiper-item {
	overflow: visible;
}

.instructor-swiper-item {
	display: flex;
	justify-content: center;
	align-items: center;
	gap: 60rpx;
	height: 100%;
}

.instructor-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	cursor: pointer;
	position: relative;
	z-index: 10;
	transition: transform 0.2s ease;
}

.instructor-item:active {
	transform: scale(0.95);
}

.instructor-avatar {
	width: 140rpx;
	height: 140rpx;
	border-radius: 50%;
	margin-bottom: 15rpx;
	background-color: #f5f5f5;
}

.instructor-name {
	font-size: 24rpx;
	color: #333;
	text-align: center;
	max-width: 140rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.shadow-project {
    box-shadow: 6rpx 6rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* Rank Section */
.rank-section {
	width: 90%;
	margin: 0 auto 40rpx;
}

/* Rank Section Wrapper - 直接在页面中 */
.rank-section-wrapper {
	width: 90%;
	margin: 0 auto 40rpx;
}

/* Poster Section - 海报区域 */
.poster-section {
	width: 90%;
	margin: 0 auto 40rpx;
}

.poster-placeholder {
	width: 100%;
	height: 300rpx;
	background: linear-gradient(135deg, #f5f7fa 0%, #e3e9f0 100%);
	border-radius: 20rpx;
	border: 2rpx dashed #c0c4cc;
	display: flex;
	align-items: center;
	justify-content: center;
}

.placeholder-text {
	font-size: 28rpx;
	color: #909399;
	font-weight: 500;
}
/* ========== Design Tokens ========== */
page {
	background: #050511;
	color: #ffffff;
}

.container {
	min-height: 100vh;
	padding: 20rpx;
	padding-top: 30rpx;
}

/* ========== Category Tabs - Breathing Gradient Switcher ========== */
.category-tabs {
	position: sticky;
	top: 0;
	z-index: 40;
	padding-bottom: 30rpx;
	background: #050511;
}

.switcher-container {
	background: rgba(0, 0, 0, 0.3);
	border-radius: 24rpx;
	padding: 8rpx;
	position: relative;
	display: flex;
	border: 1rpx solid rgba(255, 255, 255, 0.08);
	/* 内阴影增加凹陷感 */
	box-shadow: inset 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* Breathing Gradient Indicator - 玻璃高光质感 */
.switcher-indicator {
	position: absolute;
	top: 8rpx;
	bottom: 8rpx;
	left: 8rpx;
	width: calc(33.33% - 10rpx);
	/* 135deg 角度渐变 - Indigo -> Teal */
	background: linear-gradient(135deg, #6366f1, #2dd4bf);
	border-radius: 20rpx;
	transition: transform 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
	z-index: 0;
	/* 3D 玻璃高光效果 */
	box-shadow:
		inset 0 2rpx 0 rgba(255, 255, 255, 0.3),
		0 8rpx 20rpx rgba(0, 0, 0, 0.2);
	animation: breathe-indicator 5s infinite ease-in-out;
}

@keyframes breathe-indicator {
	0%, 100% {
		box-shadow:
			inset 0 2rpx 0 rgba(255, 255, 255, 0.3),
			0 8rpx 24rpx rgba(99, 102, 241, 0.25);
		opacity: 1;
	}
	50% {
		box-shadow:
			inset 0 2rpx 0 rgba(255, 255, 255, 0.3),
			0 8rpx 40rpx rgba(45, 212, 191, 0.35);
		opacity: 0.95;
	}
}

.tab-item {
	flex: 1;
	text-align: center;
	z-index: 1;
	font-size: 26rpx;
	font-weight: 500;
	color: rgba(255, 255, 255, 0.6);
	transition: color 0.3s;
	padding: 16rpx 0;
}

.tab-item.active {
	color: white;
	text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

.tab-text {
	position: relative;
	z-index: 1;
}

/* ========== Card List - Grid Layout ========== */
.card-list {
	display: grid;
	grid-template-columns: repeat(2, 1fr);
	gap: 20rpx;
	padding-bottom: 40rpx;
}

.card-item {
	position: relative;
}

/* Glass Effect Card */
.card-glass {
	background: rgba(255, 255, 255, 0.03);
	backdrop-filter: blur(40rpx);
	-webkit-backdrop-filter: blur(40rpx);
	border: 1rpx solid rgba(255, 255, 255, 0.06);
	border-radius: 32rpx;
	padding: 25rpx;
	height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	position: relative;
	overflow: hidden;
	transition: all 0.3s ease;
	/* 玻璃高光质感 - 顶部高光 + 底部阴影 */
	box-shadow:
		inset 0 1rpx 0 rgba(255, 255, 255, 0.1),
		inset 0 -1rpx 0 rgba(0, 0, 0, 0.1),
		0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

/* 卡片内部光晕效果 */
.card-glass::before {
	content: '';
	position: absolute;
	top: 0;
	right: 0;
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	pointer-events: none;
	opacity: 0.6;
}

/* 次数卡光晕 */
.card-times .card-glass::before {
	background: radial-gradient(circle, rgba(45, 212, 191, 0.15) 0%, transparent 70%);
}

/* 储值卡光晕 */
.card-balance .card-glass::before {
	background: radial-gradient(circle, rgba(99, 102, 241, 0.15) 0%, transparent 70%);
}

/* ========== Breathing Border Animations ========== */
/* 次数卡 - Teal Breathing */
.card-times .card-glass {
	border-top: 3rpx solid rgba(45, 212, 191, 0.5);
	animation: breathe-teal 4s infinite ease-in-out;
}

@keyframes breathe-teal {
	0%, 100% {
		box-shadow:
			inset 0 1rpx 0 rgba(255, 255, 255, 0.1),
			0 0 0rpx rgba(45, 212, 191, 0);
		border-top-color: rgba(45, 212, 191, 0.3);
	}
	50% {
		box-shadow:
			inset 0 1rpx 0 rgba(255, 255, 255, 0.1),
			0 0 24rpx rgba(45, 212, 191, 0.4);
		border-top-color: rgba(45, 212, 191, 0.7);
	}
}

/* 储值卡 - Indigo Breathing */
.card-balance .card-glass {
	border-top: 3rpx solid rgba(99, 102, 241, 0.5);
	animation: breathe-indigo 4s infinite ease-in-out;
}

@keyframes breathe-indigo {
	0%, 100% {
		box-shadow:
			inset 0 1rpx 0 rgba(255, 255, 255, 0.1),
			0 0 0rpx rgba(99, 102, 241, 0);
		border-top-color: rgba(99, 102, 241, 0.3);
	}
	50% {
		box-shadow:
			inset 0 1rpx 0 rgba(255, 255, 255, 0.1),
			0 0 24rpx rgba(99, 102, 241, 0.4);
		border-top-color: rgba(99, 102, 241, 0.7);
	}
}

/* ========== 错开动画时间 - 让每张卡片呼吸不同步 ========== */
/*
 * 原理：使用 nth-child 配合质数间隔，让延迟看起来随机
 * 动画周期 4s，用不同的负延迟让卡片从不同时间点开始
 * 使用 12 个不同延迟值循环（覆盖大部分场景）
 */

/* 第 1, 13, 25... 张卡片 (12n+1) */
.card-item:nth-child(12n+1) .card-glass {
	animation-delay: 0s;
}

/* 第 2, 14, 26... 张卡片 (12n+2) */
.card-item:nth-child(12n+2) .card-glass {
	animation-delay: -1.3s;
}

/* 第 3, 15, 27... 张卡片 (12n+3) */
.card-item:nth-child(12n+3) .card-glass {
	animation-delay: -2.7s;
}

/* 第 4, 16, 28... 张卡片 (12n+4) */
.card-item:nth-child(12n+4) .card-glass {
	animation-delay: -0.6s;
}

/* 第 5, 17, 29... 张卡片 (12n+5) */
.card-item:nth-child(12n+5) .card-glass {
	animation-delay: -3.4s;
}

/* 第 6, 18, 30... 张卡片 (12n+6) */
.card-item:nth-child(12n+6) .card-glass {
	animation-delay: -1.9s;
}

/* 第 7, 19, 31... 张卡片 (12n+7) */
.card-item:nth-child(12n+7) .card-glass {
	animation-delay: -0.2s;
}

/* 第 8, 20, 32... 张卡片 (12n+8) */
.card-item:nth-child(12n+8) .card-glass {
	animation-delay: -2.1s;
}

/* 第 9, 21, 33... 张卡片 (12n+9) */
.card-item:nth-child(12n+9) .card-glass {
	animation-delay: -3.7s;
}

/* 第 10, 22, 34... 张卡片 (12n+10) */
.card-item:nth-child(12n+10) .card-glass {
	animation-delay: -1.1s;
}

/* 第 11, 23, 35... 张卡片 (12n+11) */
.card-item:nth-child(12n+11) .card-glass {
	animation-delay: -2.4s;
}

/* 第 12, 24, 36... 张卡片 (12n+12 即 12n) */
.card-item:nth-child(12n) .card-glass {
	animation-delay: -0.8s;
}

/* Active State */
.card-glass:active {
	transform: scale(0.97);
	background: rgba(255, 255, 255, 0.08);
}

/* ========== Card Content Layout ========== */
/* 左上角有效期标签 - 基础样式 */
.card-validity {
	font-size: 20rpx;
	padding: 8rpx 16rpx;
	border-radius: 8rpx;
	display: inline-block;
	align-self: flex-start;
	margin-bottom: 20rpx;
	font-weight: 500;
}

/* 次数卡 - Teal/Cyan 主题有效期标签 */
.card-times .card-validity {
	background: rgba(45, 212, 191, 0.15);
	border: 1rpx solid rgba(45, 212, 191, 0.25);
	color: #5eead4;
}

/* 储值卡 - Indigo/Purple 主题有效期标签 */
.card-balance .card-validity {
	background: rgba(99, 102, 241, 0.15);
	border: 1rpx solid rgba(99, 102, 241, 0.25);
	color: #a5b4fc;
}

/* 卡片标题和描述 */
.card-info {
	display: flex;
	flex-direction: column;
	gap: 10rpx;
	margin-bottom: 30rpx;
}

.card-title {
	font-size: 28rpx;
	font-weight: bold;
	color: #ffffff;
	line-height: 1.3;
}

.card-subtitle {
	font-size: 20rpx;
	color: rgba(255, 255, 255, 0.5);
	line-height: 1.4;
}

/* ========== Card Bottom - Price & Button ========== */
.card-bottom {
	display: flex;
	flex-direction: column;
	gap: 15rpx;
}

.price-section {
	display: flex;
	align-items: baseline;
	gap: 5rpx;
}

.price-symbol {
	font-size: 22rpx;
	color: rgba(255, 255, 255, 0.8);
}

.price-amount {
	font-size: 40rpx;
	font-weight: bold;
	color: #ffffff;
}

/* ========== Purchase Button - Breathing Outline ========== */
.btn-purchase {
	width: 100%;
	padding: 12rpx 0;
	border-radius: 16rpx;
	font-size: 24rpx;
	font-weight: 700;
	text-align: center;
	background: rgba(255, 255, 255, 0.03);
	border: 3rpx solid transparent;
	transition: all 0.2s;
}

.btn-purchase:active {
	transform: scale(0.97);
	background: rgba(255, 255, 255, 0.1);
}

/* Cyan Button - for 次数卡 */
.btn-cyan {
	color: #67e8f9;
	animation: breathe-btn-cyan 3s infinite ease-in-out;
}

@keyframes breathe-btn-cyan {
	0%, 100% {
		box-shadow: 0 0 10rpx rgba(0, 242, 255, 0.2);
		border-color: rgba(0, 242, 255, 0.4);
	}
	50% {
		box-shadow: 0 0 30rpx rgba(0, 242, 255, 0.6);
		border-color: rgba(0, 242, 255, 0.8);
	}
}

/* Purple Button - for 储值卡 */
.btn-purple {
	color: #d8b4fe;
	animation: breathe-btn-purple 3s infinite ease-in-out;
}

@keyframes breathe-btn-purple {
	0%, 100% {
		box-shadow: 0 0 10rpx rgba(189, 0, 255, 0.2);
		border-color: rgba(189, 0, 255, 0.4);
	}
	50% {
		box-shadow: 0 0 30rpx rgba(189, 0, 255, 0.6);
		border-color: rgba(189, 0, 255, 0.8);
	}
}

/* ========== Empty State ========== */
.empty-state {
	text-align: center;
	padding: 120rpx 0;
}

.empty-icon {
	font-size: 120rpx;
	display: block;
	margin-bottom: 20rpx;
}

.empty-text {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.4);
}

/* ========== Loading State ========== */
.loading-state {
	text-align: center;
	padding: 40rpx 0;
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.5);
}

<view class="disclaimer-page">
	<view class="disclaimer-header">
		<view class="header-title">{{title || '卡项购买免责声明'}}</view>
		<view class="header-subtitle">请仔细阅读以下条款</view>
	</view>

	<view wx:if="{{!isLoad}}" class="loading-state">加载中...</view>

	<view wx:if="{{isLoad}}" class="disclaimer-content">
		<block wx:for="{{sections}}" wx:key="index">
			<view class="section">
				<view class="section-title">{{item.title}}</view>
				<view class="section-text">{{item.content}}</view>
			</view>
		</block>
	</view>

	<view class="disclaimer-footer">
		<button class="btn-agree" bindtap="bindAgreeTap">我已阅读并同意</button>
		<button class="btn-cancel" bindtap="bindCancelTap">返回</button>
	</view>
</view>

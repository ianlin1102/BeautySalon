.container {
	min-height: 100vh;
	background-color: #f5f5f5;
	padding: 20rpx;
}

.header {
	background: #fff;
	border-radius: 16rpx;
	padding: 24rpx 30rpx;
	margin-bottom: 20rpx;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
	color: #333;
	font-size: 32rpx;
	font-weight: bold;
}

.section {
	background: #fff;
	border-radius: 16rpx;
	padding: 30rpx;
	margin-bottom: 20rpx;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
	color: #333;
	font-size: 28rpx;
	font-weight: bold;
	margin-bottom: 20rpx;
}

/* 快速访问 */
.quick-nav {
	display: flex;
	gap: 15rpx;
	padding: 15rpx 30rpx;
}

.btn-quick {
	flex: 1;
	height: 60rpx;
	line-height: 60rpx;
	border-radius: 10rpx;
	border: none;
	font-size: 24rpx;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: white;
	padding: 0;
}

/* 搜索类型切换 */
.search-type-tabs {
	display: flex;
	gap: 10rpx;
	margin-bottom: 20rpx;
	background: #f5f5f5;
	border-radius: 10rpx;
	padding: 6rpx;
}

.search-type-tabs .tab {
	flex: 1;
	text-align: center;
	padding: 16rpx;
	border-radius: 8rpx;
	font-size: 26rpx;
	color: #666;
	transition: all 0.3s;
}

.search-type-tabs .tab.active {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: #fff;
	font-weight: bold;
}

/* 搜索输入框 */
.search-input {
	width: 100%;
	height: 80rpx;
	border: 2rpx solid #e0e0e0;
	border-radius: 10rpx;
	padding: 0 20rpx;
	margin-bottom: 20rpx;
	font-size: 28rpx;
	box-sizing: border-box;
}

.btn {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	background: #f0f0f0;
	border-radius: 10rpx;
	margin-bottom: 10rpx;
	font-size: 28rpx;
	color: #333;
	text-align: center;
	border: none;
}

.btn-primary {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: white;
	font-weight: bold;
}

.hint {
	font-size: 22rpx;
	color: #999;
	text-align: center;
	margin-top: 10rpx;
}

/* 用户信息 */
.user-info {
	background: #f9f9f9;
	border-radius: 10rpx;
	padding: 20rpx;
	margin-bottom: 20rpx;
}

.user-info .info-row {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 10rpx 0;
}

.user-info .label {
	font-size: 24rpx;
	color: #666;
}

.user-info .value {
	font-size: 26rpx;
	color: #333;
	font-weight: bold;
}

/* 汇总卡片 */
.summary-card {
	background: #f9f9f9;
	border-radius: 10rpx;
	padding: 20rpx;
	margin-bottom: 20rpx;
}

.summary-title {
	color: #333;
	font-size: 24rpx;
	font-weight: bold;
	margin-bottom: 16rpx;
	padding-bottom: 12rpx;
	border-bottom: 1rpx solid #e0e0e0;
}

.summary-row {
	display: flex;
	justify-content: space-around;
	gap: 10rpx;
}

.summary-item {
	flex: 1;
	text-align: center;
}

.summary-label {
	display: block;
	color: #666;
	font-size: 22rpx;
	margin-bottom: 8rpx;
}

.summary-value {
	display: block;
	color: #333;
	font-size: 28rpx;
	font-weight: bold;
}

/* 卡项详情 */
.card-detail {
	border-radius: 10rpx;
	overflow: hidden;
}

.card-list {
	margin-top: 20rpx;
}

.card-item {
	background: #fff;
	border-radius: 12rpx;
	padding: 24rpx;
	margin-bottom: 16rpx;
	border: 1rpx solid #f0f0f0;
}

.card-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 16rpx;
}

.card-name {
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
	flex: 1;
}

.card-status {
	padding: 6rpx 14rpx;
	border-radius: 20rpx;
	font-size: 20rpx;
	color: #fff;
}

.status-0 {
	background: #909399;
}

.status-1 {
	background: #67c23a;
}

.status-2 {
	background: #f56c6c;
}

/* 唯一识别码 */
.card-unique-id {
	background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
	border-radius: 10rpx;
	padding: 15rpx 20rpx;
	margin-bottom: 16rpx;
	display: flex;
	align-items: center;
}

.unique-id-label {
	font-size: 22rpx;
	color: #8b4513;
	margin-right: 10rpx;
}

.unique-id-value {
	flex: 1;
	font-size: 24rpx;
	font-weight: bold;
	color: #8b4513;
	font-family: 'Courier New', monospace;
	letter-spacing: 2rpx;
}

.copy-btn {
	padding: 6rpx 16rpx;
	background: rgba(139, 69, 19, 0.2);
	border-radius: 20rpx;
	font-size: 20rpx;
	color: #8b4513;
}

/* 卡项信息 */
.card-info {
	margin-bottom: 16rpx;
}

.card-info .info-row {
	display: flex;
	justify-content: space-around;
	gap: 10rpx;
}

.info-item {
	flex: 1;
	text-align: center;
	padding: 16rpx;
	background: #f9f9f9;
	border-radius: 10rpx;
}

.info-label {
	display: block;
	font-size: 22rpx;
	color: #999;
	margin-bottom: 8rpx;
}

.info-value {
	display: block;
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
}

.info-value.times {
	color: #409eff;
}

.info-value.balance {
	color: #e6a23c;
}

/* 卡项底部 */
.card-footer {
	display: flex;
	justify-content: space-between;
	padding-top: 12rpx;
	border-top: 1rpx solid #f0f0f0;
}

.footer-text {
	font-size: 20rpx;
	color: #999;
}

/* 操作按钮 */
.action-buttons {
	display: flex;
	gap: 10rpx;
	margin-top: 20rpx;
}

.btn-action {
	flex: 1;
	height: 70rpx;
	line-height: 70rpx;
	border-radius: 10rpx;
	font-size: 24rpx;
	color: #fff;
	text-align: center;
	border: none;
}

.btn-deduct {
	background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.btn-add {
	background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);
}

.btn-records {
	background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

/* 空状态 */
.empty-state {
	text-align: center;
	padding: 100rpx 0;
}

.empty-icon {
	font-size: 120rpx;
	display: block;
	margin-bottom: 20rpx;
}

.empty-text {
	font-size: 26rpx;
	color: #999;
}

/* 底部导航 */
.footer-nav {
	padding: 20rpx 0;
}

.btn-nav {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	border-radius: 10rpx;
	border: none;
	font-size: 28rpx;
	background-color: #909399;
	color: white;
}

/* 添加卡项按钮 */
.btn-add-card {
	width: 100%;
	height: 70rpx;
	line-height: 70rpx;
	border-radius: 10rpx;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: white;
	font-size: 26rpx;
	font-weight: bold;
	margin-top: 20rpx;
	border: none;
}

/* 删除按钮 */
.btn-delete {
	background: linear-gradient(135deg, #f56c6c 0%, #ff0000 100%);
}

/* 可点击样式 */
.clickable {
	cursor: pointer;
	text-decoration: underline;
	text-decoration-style: dotted;
}

/* 模态框遮罩 */
.modal-overlay {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 0, 0, 0.5);
	display: flex;
	justify-content: center;
	align-items: center;
	z-index: 9999;
}

/* 模态框容器 */
.modal-container {
	background: #fff;
	border-radius: 20rpx;
	width: 85%;
	max-height: 70vh;
	display: flex;
	flex-direction: column;
	overflow: hidden;
	box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
}

/* 添加卡项模态框样式 */
.add-card-modal {
	max-height: 80vh;
}

/* 模态框头部 */
.modal-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 30rpx;
	border-bottom: 1rpx solid #f0f0f0;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.modal-title {
	font-size: 30rpx;
	font-weight: bold;
	color: #fff;
}

.modal-close {
	font-size: 48rpx;
	color: #fff;
	line-height: 1;
	padding: 0 10rpx;
	cursor: pointer;
}

/* 模态框内容 */
.modal-content {
	flex: 1;
	overflow-y: auto;
	padding: 30rpx;
}

/* 使用记录项 */
.record-item {
	background: #f9f9f9;
	border-radius: 10rpx;
	padding: 20rpx;
	margin-bottom: 16rpx;
	border-left: 4rpx solid #667eea;
}

.record-row {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 8rpx 0;
}

.record-label {
	font-size: 24rpx;
	color: #666;
	min-width: 120rpx;
}

.record-value {
	font-size: 26rpx;
	color: #333;
	font-weight: 500;
	text-align: right;
	flex: 1;
}

.record-value.positive {
	color: #67c23a;
	font-weight: bold;
}

.record-value.negative {
	color: #f56c6c;
	font-weight: bold;
}

/* 空记录状态 */
.empty-records {
	text-align: center;
	padding: 80rpx 0;
}

.empty-records .empty-icon {
	font-size: 100rpx;
	display: block;
	margin-bottom: 20rpx;
}

.empty-records .empty-text {
	font-size: 24rpx;
	color: #999;
}

/* 表单组 */
.form-group {
	margin-bottom: 30rpx;
}

.form-label {
	display: block;
	font-size: 26rpx;
	color: #333;
	font-weight: bold;
	margin-bottom: 12rpx;
}

.form-input {
	width: 100%;
	height: 80rpx;
	border: 2rpx solid #e0e0e0;
	border-radius: 10rpx;
	padding: 0 20rpx;
	font-size: 26rpx;
	box-sizing: border-box;
	background: #fff;
}

.form-hint {
	font-size: 22rpx;
	color: #999;
	margin-top: 8rpx;
	display: block;
}

/* 选择器输入框 */
.picker-input {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	border: 2rpx solid #e0e0e0;
	border-radius: 10rpx;
	padding: 0 20rpx;
	font-size: 26rpx;
	box-sizing: border-box;
	background: #fff;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.picker-input .placeholder {
	color: #999;
}

/* 卡项预览 */
.card-preview {
	background: linear-gradient(135deg, #e0f7fa 0%, #e1bee7 100%);
	border-radius: 10rpx;
	padding: 20rpx;
	margin-bottom: 20rpx;
}

.preview-row {
	display: flex;
	justify-content: space-between;
	padding: 10rpx 0;
}

.preview-label {
	font-size: 24rpx;
	color: #555;
}

.preview-value {
	font-size: 24rpx;
	color: #333;
	font-weight: bold;
}

/* 确认按钮 */
.btn-confirm {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	border-radius: 10rpx;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: white;
	font-size: 28rpx;
	font-weight: bold;
	border: none;
	margin-top: 20rpx;
}

.btn-confirm[disabled] {
	background: #d0d0d0;
	color: #999;
}

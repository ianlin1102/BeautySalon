page {
	background-color: #f8f8f8;
	padding-bottom: 120rpx;
}

.main {
	width: 100%;
	position: relative;
	padding: 0 !important;
	margin-bottom: 0 !important;
	display: block !important;
	box-sizing: border-box;
}

/* 卡项图片 */
.card-cover {
	width: 100%;
	background: #fff;
}

.card-cover image {
	width: 100%;
	display: block;
}

/* 卡项基本信息 */
.card-info {
	background: #fff;
	padding: 30rpx;
	margin: 0 20rpx 20rpx 20rpx;
}

.card-title {
	font-size: 36rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 20rpx;
}

.card-meta {
	margin-bottom: 30rpx;
}

.meta-item {
	display: flex;
	align-items: center;
	margin-bottom: 15rpx;
	font-size: 28rpx;
}

.meta-item .label {
	color: #999;
	margin-right: 10rpx;
}

.meta-item .value {
	color: #333;
}

.meta-item .highlight {
	color: #5756B3;
	font-weight: bold;
}

.tag {
	display: inline-block;
	padding: 8rpx 16rpx;
	border-radius: 8rpx;
	font-size: 24rpx;
	color: #fff;
	font-weight: 600;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.tag.blue {
	background: linear-gradient(135deg, #667eea 0%, #5756B3 100%);
}

.tag.green {
	background: linear-gradient(135deg, #52c41a 0%, #3d9a14 100%);
}

.card-price {
	display: flex;
	align-items: baseline;
	padding-top: 20rpx;
	border-top: 1rpx solid #eee;
}

.price-label {
	font-size: 28rpx;
	color: #999;
	margin-right: 20rpx;
}

.price-value {
	display: flex;
	align-items: baseline;
}

.price-value .currency {
	font-size: 32rpx;
	color: #ff4d4f;
	font-weight: bold;
}

.price-value .amount {
	font-size: 48rpx;
	color: #ff4d4f;
	font-weight: bold;
}

/* 卡项描述 */
.card-desc {
	background: #fff;
	padding: 30rpx;
	margin: 0 20rpx 20rpx 20rpx;
}

.section-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 20rpx;
	padding-left: 20rpx;
	border-left: 6rpx solid #5756B3;
}

.desc-text {
	font-size: 28rpx;
	color: #666;
	line-height: 1.8;
}

/* 详细内容 */
.card-content {
	background: #fff;
	margin: 0 20rpx 20rpx 20rpx;
	overflow: hidden;
}

.content-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	padding: 30rpx;
	padding-bottom: 20rpx;
	margin: 0;
	border-left: 6rpx solid #5756B3;
	padding-left: 24rpx;
}

.content-text {
	font-size: 28rpx;
	color: #666;
	line-height: 1.8;
	padding: 20rpx 30rpx;
	margin: 0;
	word-wrap: break-word;
	word-break: break-all;
}

.content-img {
	width: 100%;
	height: auto;
	display: block;
	margin: 20rpx 0;
	padding: 0;
}

/* 支付信息 */
.payment-info {
	background: #fff;
	padding: 30rpx;
	margin: 0 20rpx 20rpx 20rpx;
}

.payment-item {
	margin-bottom: 25rpx;
}

.payment-item:last-child {
	margin-bottom: 0;
}

.payment-label {
	font-size: 28rpx;
	color: #999;
	margin-bottom: 10rpx;
}

.payment-value {
	font-size: 28rpx;
	color: #333;
	line-height: 1.6;
}

.payment-qr {
	width: 400rpx;
	height: 400rpx;
	display: block;
	margin-top: 10rpx;
	border-radius: 8rpx;
	border: 1rpx solid #eee;
}

/* 免责声明勾选 */
.disclaimer-section {
	background: #fff;
	padding: 30rpx;
	margin: 0 20rpx 20rpx 20rpx;
	border-radius: 12rpx;
}

.disclaimer-checkbox {
	display: flex;
	align-items: center;
	font-size: 28rpx;
	line-height: 1.8;
}

.disclaimer-text {
	color: #666;
	margin-left: 10rpx;
}

.disclaimer-link {
	color: #667eea;
	text-decoration: underline;
	margin-left: 5rpx;
}

/* 购买按钮 */
.purchase-bar {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background: #fff;
	padding: 20rpx 0;
	box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
	z-index: 100;
	height: 100rpx;
}

.purchase-price {
	display: flex;
	align-items: baseline;
	position: absolute;
	left: 30rpx;
	top: 50%;
	transform: translateY(-50%);
	z-index: 1;
}

.purchase-price .currency {
	font-size: 28rpx;
	color: #ff4d4f;
	font-weight: bold;
}

.purchase-price .amount {
	font-size: 40rpx;
	color: #ff4d4f;
	font-weight: bold;
}

.purchase-btn {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: #fff;
	border: none;
	border-radius: 50rpx;
	padding: 20rpx 60rpx;
	font-size: 32rpx;
	font-weight: bold;
	line-height: 1.5;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
}

.purchase-btn[disabled] {
	background: #e0e0e0;
	color: #999;
}

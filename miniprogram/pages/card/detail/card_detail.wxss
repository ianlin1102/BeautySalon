@import "../../../style/project/neon_theme.wxss";

page {
	background-color: #050511;
	padding-bottom: 180rpx;
}

.main {
	width: 100%;
	position: relative;
	padding: 0 !important;
	margin-bottom: 0 !important;
	display: block !important;
	box-sizing: border-box;
	z-index: 1;
}

/* 卡项图片 */
.card-cover {
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
}

.card-cover image {
	width: 100%;
	display: block;
	border-radius: 24rpx;
	box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.5);
}

/* 卡项基本信息 */
.card-info {
	background: rgba(255, 255, 255, 0.03);
	backdrop-filter: blur(10px);
	-webkit-backdrop-filter: blur(10px);
	border: 1rpx solid rgba(255, 255, 255, 0.05);
	border-radius: 32rpx;
	padding: 40rpx 30rpx;
	margin: 0 20rpx 30rpx 20rpx;
	position: relative;
	overflow: hidden;
}

.card-info::before {
	content: '';
	position: absolute;
	left: 0;
	top: 40rpx;
	width: 8rpx;
	height: 40rpx;
	background: #00f2ff;
	border-radius: 0 4rpx 4rpx 0;
	box-shadow: 0 0 15rpx rgba(0, 242, 255, 0.6);
}

.card-title {
	font-size: 40rpx;
	font-weight: bold;
	color: #fff;
	margin-bottom: 30rpx;
	padding-left: 20rpx;
}

.card-meta {
	margin-bottom: 40rpx;
	padding-left: 20rpx;
}

.meta-item {
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
	font-size: 28rpx;
}

.meta-item .label {
	color: rgba(255, 255, 255, 0.5);
	margin-right: 20rpx;
}

.meta-item .value {
	color: #fff;
}

.meta-item .highlight {
	color: #00f2ff;
	font-weight: bold;
	text-shadow: 0 0 10rpx rgba(0, 242, 255, 0.3);
}

.tag {
	display: inline-block;
	padding: 6rpx 20rpx;
	border-radius: 30rpx;
	font-size: 24rpx;
	color: #fff;
	font-weight: 600;
}

.tag.blue {
	background: rgba(0, 242, 255, 0.15);
	color: #00f2ff;
	border: 1rpx solid rgba(0, 242, 255, 0.3);
}

.tag.green {
	background: rgba(45, 212, 191, 0.15);
	color: #2dd4bf;
	border: 1rpx solid rgba(45, 212, 191, 0.3);
}

.card-price {
	display: flex;
	align-items: baseline;
	padding-top: 30rpx;
	border-top: 1rpx solid rgba(255, 255, 255, 0.05);
	padding-left: 20rpx;
}

.price-label {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.5);
	margin-right: 24rpx;
}

.price-value {
	display: flex;
	align-items: baseline;
}

.price-value .currency {
	font-size: 36rpx;
	color: #ff00de;
	font-weight: bold;
	margin-right: 4rpx;
}

.price-value .amount {
	font-size: 56rpx;
	color: #ff00de;
	font-weight: bold;
	text-shadow: 0 0 20rpx rgba(255, 0, 222, 0.3);
}

/* 卡项描述 */
.card-desc {
	background: rgba(255, 255, 255, 0.03);
	border-radius: 32rpx;
	padding: 40rpx 30rpx;
	margin: 0 20rpx 30rpx 20rpx;
}

.section-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #fff;
	margin-bottom: 24rpx;
	padding-left: 20rpx;
	border-left: 6rpx solid #ff00de;
}

.desc-text {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.7);
	line-height: 1.8;
	padding: 0 20rpx;
}

/* 详细内容 */
.card-content {
	background: rgba(255, 255, 255, 0.03);
	margin: 0 20rpx 30rpx 20rpx;
	border-radius: 32rpx;
	overflow: hidden;
	padding-bottom: 30rpx;
}

.content-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #fff;
	padding: 40rpx 30rpx 20rpx 30rpx;
	margin: 0;
	border-left: 6rpx solid #00f2ff;
	padding-left: 24rpx;
}

.content-text {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.7);
	line-height: 1.8;
	padding: 20rpx 30rpx;
	margin: 0;
	word-wrap: break-word;
	word-break: break-all;
}

.content-img {
	width: calc(100% - 40rpx);
	height: auto;
	display: block;
	margin: 20rpx auto;
	border-radius: 16rpx;
}

/* 支付信息 */
.payment-info {
	background: rgba(255, 255, 255, 0.03);
	border-radius: 32rpx;
	padding: 40rpx 30rpx;
	margin: 0 20rpx 30rpx 20rpx;
}

.payment-item {
	margin-bottom: 30rpx;
	padding: 0 20rpx;
}

.payment-item:last-child {
	margin-bottom: 0;
}

.payment-label {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.5);
	margin-bottom: 12rpx;
}

.payment-value {
	font-size: 30rpx;
	color: #fff;
	line-height: 1.6;
	font-family: monospace;
}

.payment-qr {
	width: 400rpx;
	height: 400rpx;
	display: block;
	margin: 20rpx auto 0;
	border-radius: 16rpx;
	padding: 10rpx;
	background: #fff;
}

/* 免责声明勾选 */
.disclaimer-section {
	background: rgba(255, 255, 255, 0.03);
	padding: 30rpx;
	margin: 0 20rpx 40rpx 20rpx;
	border-radius: 32rpx;
}

.disclaimer-checkbox {
	display: flex;
	align-items: center;
	font-size: 26rpx;
	line-height: 1.8;
}

.disclaimer-text {
	color: rgba(255, 255, 255, 0.6);
	margin-left: 10rpx;
}

.disclaimer-link {
	color: #00f2ff;
	text-decoration: underline;
	margin-left: 5rpx;
}

/* 购买按钮 */
.purchase-bar {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background: rgba(5, 5, 17, 0.9);
	backdrop-filter: blur(20px);
	-webkit-backdrop-filter: blur(20px);
	padding: 30rpx 40rpx;
	padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
	box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.5);
	z-index: 100;
	display: flex;
	justify-content: center;
	align-items: center;
	border-top: 1rpx solid rgba(255, 255, 255, 0.05);
}

.purchase-btn {
	background: linear-gradient(135deg, #ff00de, #00f2ff);
	color: #fff;
	border: none;
	border-radius: 50rpx;
	padding: 24rpx 0;
	font-size: 32rpx;
	font-weight: bold;
	line-height: 1.5;
	width: 100%;
	max-width: 600rpx;
	box-shadow: 0 0 20rpx rgba(255, 0, 222, 0.4);
	display: flex;
	justify-content: center;
	align-items: center;
}

.purchase-btn:active {
	transform: scale(0.98);
	filter: brightness(1.1);
}

.purchase-btn[disabled] {
	background: rgba(255, 255, 255, 0.1) !important;
	color: rgba(255, 255, 255, 0.3) !important;
	box-shadow: none;
}

/* ============================================
   弹窗 - 磨砂暗色风格
   ============================================ */

.modal-mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 0, 0, 0.65);
	z-index: 1000;
	display: flex;
	align-items: center;
	justify-content: center;
}

.modal-content {
	width: 88%;
	max-width: 640rpx;
	background: rgba(15, 15, 30, 0.95);
	backdrop-filter: blur(20px);
	-webkit-backdrop-filter: blur(20px);
	border-radius: 32rpx;
	border: 1rpx solid rgba(255, 255, 255, 0.05);
	overflow: hidden;
	box-shadow:
		0 40rpx 80rpx rgba(0, 0, 0, 0.6),
		0 0 40rpx rgba(0, 242, 255, 0.06);
}

.modal-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 32rpx 30rpx;
	border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.modal-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #fff;
}

.modal-close {
	font-size: 40rpx;
	color: rgba(255, 255, 255, 0.3);
	padding: 0 10rpx;
	line-height: 1;
}

.modal-close:active {
	color: rgba(255, 255, 255, 0.6);
}

.modal-body {
	padding: 30rpx;
}

.modal-footer {
	display: flex;
	padding: 20rpx 30rpx 30rpx;
	gap: 20rpx;
}

/* 弹窗按钮 */
.modal-btn {
	flex: 1;
	border-radius: 50rpx;
	font-size: 28rpx;
	font-weight: 600;
	padding: 22rpx 0;
	line-height: 1.5;
	border: none;
}

.modal-btn.cancel {
	background: rgba(255, 255, 255, 0.05);
	color: rgba(255, 255, 255, 0.6);
	border: 1rpx solid rgba(255, 255, 255, 0.08);
}

.modal-btn.cancel:active {
	background: rgba(255, 255, 255, 0.1);
}

.modal-btn.confirm {
	background: linear-gradient(135deg, #ff00de, #00f2ff);
	color: #fff;
	box-shadow: 0 0 16rpx rgba(255, 0, 222, 0.3);
}

.modal-btn.confirm:active {
	filter: brightness(1.1);
}

.modal-btn.confirm[disabled] {
	background: rgba(255, 255, 255, 0.08) !important;
	color: rgba(255, 255, 255, 0.2) !important;
	box-shadow: none !important;
}

/* ============================================
   购买确认
   ============================================ */

.confirm-card-name {
	font-size: 34rpx;
	font-weight: bold;
	color: #fff;
	margin-bottom: 24rpx;
}

.confirm-card-price,
.confirm-payment,
.confirm-zelle {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.7);
	margin-bottom: 16rpx;
	display: flex;
	align-items: center;
}

.confirm-label {
	color: rgba(255, 255, 255, 0.5);
	margin-right: 12rpx;
	white-space: nowrap;
}

.confirm-price {
	color: #ff00de;
	font-weight: bold;
	font-size: 32rpx;
	text-shadow: 0 0 10rpx rgba(255, 0, 222, 0.3);
}

.confirm-zelle-value {
	color: #00f2ff;
	font-weight: bold;
	font-family: monospace;
	text-shadow: 0 0 10rpx rgba(0, 242, 255, 0.3);
}

.confirm-hint {
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.45);
	margin-top: 24rpx;
	padding: 24rpx;
	background: rgba(255, 255, 255, 0.03);
	border: 1rpx solid rgba(255, 255, 255, 0.05);
	border-radius: 20rpx;
	line-height: 1.7;
}

/* ============================================
   上传凭证
   ============================================ */

.upload-area {
	width: 100%;
	min-height: 320rpx;
	border: 2rpx dashed rgba(0, 242, 255, 0.25);
	border-radius: 20rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	overflow: hidden;
	background: rgba(0, 242, 255, 0.02);
}

.upload-area:active {
	border-color: rgba(0, 242, 255, 0.5);
	background: rgba(0, 242, 255, 0.05);
}

.upload-placeholder {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.upload-icon {
	font-size: 80rpx;
	line-height: 1;
	color: rgba(0, 242, 255, 0.3);
	font-weight: 200;
}

.upload-text {
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.35);
	margin-top: 12rpx;
}

.proof-preview {
	width: 100%;
	height: 400rpx;
}

.upload-hint {
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.3);
	margin-top: 16rpx;
	text-align: center;
}

/* ============================================
   成功状态
   ============================================ */

.success-icon {
	width: 100rpx;
	height: 100rpx;
	line-height: 100rpx;
	border-radius: 50%;
	background: linear-gradient(135deg, #00f2ff, #ff00de);
	color: #fff;
	font-size: 48rpx;
	font-weight: bold;
	margin: 0 auto 30rpx;
	text-align: center;
	box-shadow:
		0 0 30rpx rgba(0, 242, 255, 0.3),
		0 0 60rpx rgba(255, 0, 222, 0.15);
}

.success-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #fff;
	margin-bottom: 16rpx;
}

.success-hint {
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.45);
	line-height: 1.7;
}
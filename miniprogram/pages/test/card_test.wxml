<view class="container">
	<view class="header">
		<text class="title">卡项管理系统</text>
		<text class="admin-status" wx:if="{{isAdmin}}" style="color: #07c160;">✅ 管理员</text>
		<text class="admin-status" wx:else style="color: #ff976a;">⚠️ 普通用户</text>
	</view>

	<!-- 导航按钮 -->
	<view class="section">
		<view class="nav-buttons">
			<button class="btn-nav" bindtap="goBack">← 返回</button>
			<button class="btn-nav btn-home" bindtap="goHome">首页</button>
		</view>
	</view>

	<!-- 快速访问 -->
	<view class="section">
		<view class="section-title">🚀 快速访问</view>
		<button class="btn btn-warning" bindtap="goCardStore">🛒 卡项商城</button>
		<button class="btn btn-warning" bindtap="goCardSearch">🔍 卡项搜索</button>
		<view class="hint">快速跳转到常用页面</view>
	</view>


	<!-- 测试结果 -->
	<view class="section">
		<view class="section-title">
			📋 操作日志
			<text class="clear-btn" bindtap="clearLog">清空</text>
		</view>
		<scroll-view class="log-container" scroll-y>
			<view class="log-item" wx:for="{{testResults}}" wx:key="index">
				<text class="log-time">{{item.time}}</text>
				<text class="log-message" style="color: {{item.color}};">{{item.message}}</text>
			</view>
			<view wx:if="{{testResults.length === 0}}" class="empty-log">
				暂无操作记录
			</view>
		</scroll-view>
	</view>
</view>

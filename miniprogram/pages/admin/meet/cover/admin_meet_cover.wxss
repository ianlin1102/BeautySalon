/* 新的背景图片卡片预览样式 */
.preview-card-new {
	width: 100%;
	height: 280rpx;
	position: relative;
	border-radius: 24rpx;
	overflow: hidden;
	box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 背景图片层 */
.preview-card-new .preview-bg {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 1;
}

.preview-card-new .preview-bg-img {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

.preview-card-new .preview-bg-placeholder {
	width: 100%;
	height: 100%;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 白色渐变遮罩 - 从上1/4开始渐变，中间完成 */
.preview-card-new .preview-gradient-mask {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	height: 85%;
	background: linear-gradient(to top,
		rgba(255, 255, 255, 1) 0%,
		rgba(255, 255, 255, 1) 20%,
		rgba(255, 255, 255, 0.96) 35%,
		rgba(255, 255, 255, 0.88) 50%,
		rgba(255, 255, 255, 0.72) 65%,
		rgba(255, 255, 255, 0.45) 80%,
		transparent 100%);
}

/* 内容层：左右布局 */
.preview-card-new .preview-layout {
	position: relative;
	z-index: 2;
	height: 100%;
	display: flex;
	flex-direction: row;
	align-items: flex-end;
	padding: 24rpx 28rpx 28rpx;
}

/* 左侧区域：标题和时间段 */
.preview-card-new .preview-left {
	flex: 1;
	display: flex;
	flex-direction: column;
	gap: 8rpx;
	max-height: 200rpx;
	justify-content: flex-end;
}

.preview-card-new .preview-title {
	font-size: 40rpx;
	font-weight: bold;
	color: #000;
	line-height: 1.3;
	max-width: 480rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	text-shadow: 0 1rpx 3rpx rgba(255, 255, 255, 0.8);
	flex-shrink: 0;
}

/* 预览时间段标签容器 */
.preview-card-new .preview-time-slots {
	display: flex;
	flex-direction: column;
	gap: 6rpx;
	max-height: 140rpx;
	overflow-y: auto;
	flex-shrink: 1;
}

/* 预览时间段标签 */
.preview-card-new .preview-time-tag {
	display: inline-flex;
	align-items: center;
	padding: 6rpx 16rpx;
	background: linear-gradient(135deg, #fce4ec 0%, #f8bbd0 100%);
	color: #c2185b;
	font-size: 24rpx;
	font-weight: 600;
	border-radius: 18rpx;
	align-self: flex-start;
	box-shadow: 0 2rpx 8rpx rgba(252, 228, 236, 0.4);
	flex-shrink: 0;
}

/* 右侧区域：按钮 */
.preview-card-new .preview-right {
	width: 160rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-shrink: 0;
}

.preview-card-new .preview-btn {
	padding: 18rpx 28rpx;
	background: radial-gradient(ellipse at center,
		#5756B3 0%,
		#5756B3 40%,
		rgba(87, 86, 179, 0.85) 70%,
		rgba(87, 86, 179, 0.6) 90%,
		rgba(87, 86, 179, 0.3) 100%);
	color: #fff;
	font-size: 30rpx;
	font-weight: 600;
	border-radius: 44rpx;
	box-shadow: 0 6rpx 20rpx rgba(87, 86, 179, 0.4),
				0 0 40rpx rgba(87, 86, 179, 0.2);
}
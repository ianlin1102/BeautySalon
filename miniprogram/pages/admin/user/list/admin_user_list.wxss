@import '../../../../style/project/base/admin.wxss';

page {
	background-color: #f8f8f8;
}

/* 用户来源标签 */
.source-tag {
	display: inline-block;
	font-size: 20rpx;
	padding: 4rpx 12rpx;
	border-radius: 6rpx;
	margin-left: 12rpx;
	font-weight: normal;
	vertical-align: middle;
}

.source-wechat {
	background-color: rgba(34, 197, 94, 0.15);
	color: #22c55e;
}

.source-google {
	background-color: rgba(66, 133, 244, 0.15);
	color: #4285f4;
}

.source-web {
	background-color: rgba(168, 85, 247, 0.15);
	color: #a855f7;
}

.source-unknown {
	background-color: rgba(156, 163, 175, 0.15);
	color: #9ca3af;
}

/* 状态标签 */
.status-tag {
	display: inline-block;
	font-size: 20rpx;
	padding: 4rpx 12rpx;
	border-radius: 6rpx;
	font-weight: normal;
}

.status-normal {
	background-color: rgba(34, 197, 94, 0.15);
	color: #22c55e;
}

.status-pending {
	background-color: rgba(234, 179, 8, 0.15);
	color: #eab308;
}

/* 简化用户列表样式 */
.user-item {
	padding: 24rpx 30rpx !important;
	border-bottom: 1rpx solid #f0f0f0;
}

.user-row {
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.user-info {
	display: flex;
	align-items: center;
	flex: 1;
}

.user-name {
	font-size: 32rpx;
	color: #333;
	margin-left: 16rpx;
}

.user-arrow {
	color: #ccc;
	font-size: 28rpx;
}

/* 用户ID信息行 - 可复制 */
.user-id-row {
	display: flex;
	align-items: center;
	padding: 12rpx 0 0 12rpx;
	margin-top: 8rpx;
	border-top: 1rpx dashed #eee;
}

.user-id-label {
	font-size: 24rpx;
	color: #999;
	margin-right: 8rpx;
}

.user-id-value {
	flex: 1;
	font-size: 24rpx;
	color: #666;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	max-width: 400rpx;
}

.copy-icon {
	font-size: 28rpx;
	color: #4285f4;
	padding: 8rpx 16rpx;
}

.user-id-row:active {
	background-color: rgba(66, 133, 244, 0.08);
	border-radius: 8rpx;
}
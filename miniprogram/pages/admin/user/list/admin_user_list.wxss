@import '../../../../style/project/base/admin.wxss';

page {
	background-color: #f8f8f8;
}

/* 用户来源标签 */
.source-tag {
	display: inline-block;
	font-size: 20rpx;
	padding: 4rpx 12rpx;
	border-radius: 6rpx;
	margin-left: 12rpx;
	font-weight: normal;
	vertical-align: middle;
}

.source-wechat {
	background-color: rgba(34, 197, 94, 0.15);
	color: #22c55e;
}

.source-google {
	background-color: rgba(66, 133, 244, 0.15);
	color: #4285f4;
}

.source-web {
	background-color: rgba(168, 85, 247, 0.15);
	color: #a855f7;
}

.source-unknown {
	background-color: rgba(156, 163, 175, 0.15);
	color: #9ca3af;
}

/* 状态标签 */
.status-tag {
	display: inline-block;
	font-size: 20rpx;
	padding: 4rpx 12rpx;
	border-radius: 6rpx;
	font-weight: normal;
}

.status-normal {
	background-color: rgba(34, 197, 94, 0.15);
	color: #22c55e;
}

.status-pending {
	background-color: rgba(234, 179, 8, 0.15);
	color: #eab308;
}
<block wx:if="{{isAdmin}}">
	<cmpt-comm-list type="admin-meet" search="{{search}}" _menus="{{sortMenus}}" _items="{{sortItems}}" route="admin/user_list" sortMenusDefaultIndex="0" topBottom="50" placeholder="搜索" bind:list="bindCommListCmpt">

		<view slot="searchEnd">
			<button bindtap="url" data-url="../export/admin_user_export?condition={{dataList.condition}}" class="btn mid radius bg-admin text-white margin-right-s"><text class="icon-down margin-right-xxs"></text>导出用户资料</button>
		</view>

		<!-- List Begin -->
		<view class="admin-comm-list">
			<view wx:if="{{dataList && dataList.total }}" class="load text-grey">共有{{dataList.total}}条符合条件记录 </view>

			<view class="item user-item" wx:for="{{dataList.list}}" wx:key="key" bindtap="bindUserTap" data-user="{{item}}">
				<view class="user-row">
					<view class="user-info">
						<!-- 来源标签 -->
						<text wx:if="{{item.USER_MINI_OPENID}}" class="source-tag source-wechat">微信</text>
						<text wx:elif="{{item.USER_GOOGLE_ID}}" class="source-tag source-google">Google</text>
						<text wx:elif="{{item.USER_ACCOUNT}}" class="source-tag source-web">Web</text>
						<text wx:else class="source-tag source-unknown">未知</text>
						<!-- 用户名 -->
						<text class="user-name">{{item.USER_NAME || '未设置姓名'}}</text>
					</view>
					<view class="user-arrow">
						<text class="icon-right"></text>
					</view>
				</view>
				<!-- 用户标识信息 - 可复制 -->
				<view class="user-id-row" catchtap="bindCopyId" data-id="{{item.USER_GOOGLE_EMAIL || item.USER_MINI_OPENID || item.USER_ACCOUNT || item.USER_ID || item._id}}" data-type="{{item.USER_GOOGLE_EMAIL ? 'Email' : (item.USER_MINI_OPENID ? 'OpenID' : (item.USER_ACCOUNT ? '账号' : 'ID'))}}">
					<text class="user-id-label">{{item.USER_GOOGLE_EMAIL ? 'Email' : (item.USER_MINI_OPENID ? 'OpenID' : (item.USER_ACCOUNT ? '账号' : 'ID'))}}:</text>
					<text class="user-id-value">{{item.USER_GOOGLE_EMAIL || item.USER_MINI_OPENID || item.USER_ACCOUNT || item.USER_ID || item._id}}</text>
					<text class="copy-icon icon-copy"></text>
				</view>
			</view>
		</view>
		<!-- List END -->

		<!--load begin-->
		<import src="../../../../tpls/public/list_load_tpl.wxml" />
		<template is="listLoadTpl" data="{{skin:'text-grey',dataList}}" />
		<!--load end-->


	</cmpt-comm-list>

</block>

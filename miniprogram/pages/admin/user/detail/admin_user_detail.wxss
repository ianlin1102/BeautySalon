.container {
	padding: 20rpx;
	background-color: #f5f5f5;
	min-height: 100vh;
}

/* 用户卡片 */
.user-card {
	background: #fff;
	border-radius: 16rpx;
	padding: 30rpx;
	margin-bottom: 20rpx;
}

.user-header {
	display: flex;
	align-items: center;
	padding-bottom: 24rpx;
	border-bottom: 1rpx solid #f0f0f0;
}

.user-avatar {
	width: 100rpx;
	height: 100rpx;
	background: linear-gradient(135deg, #667eea, #764ba2);
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #fff;
	font-size: 48rpx;
}

.user-main {
	margin-left: 24rpx;
}

.user-name {
	font-size: 36rpx;
	font-weight: bold;
	color: #333;
}

.user-source {
	font-size: 26rpx;
	color: #999;
	margin-top: 8rpx;
}

.user-info-list {
	margin-top: 24rpx;
}

.info-item {
	display: flex;
	justify-content: space-between;
	padding: 16rpx 0;
	border-bottom: 1rpx dashed #f5f5f5;
}

.info-item:last-child {
	border-bottom: none;
}

.info-item .label {
	color: #999;
	font-size: 28rpx;
}

.info-item .value {
	color: #333;
	font-size: 28rpx;
	max-width: 400rpx;
	text-align: right;
}

/* 用户ID区域 */
.user-id-section {
	margin-top: 20rpx;
	padding-top: 20rpx;
	border-top: 1rpx solid #f0f0f0;
}

.id-row {
	display: flex;
	align-items: center;
	padding: 16rpx;
	background: #f8f9fa;
	border-radius: 8rpx;
}

.id-row:active {
	background: #e9ecef;
}

.id-label {
	font-size: 26rpx;
	color: #999;
	margin-right: 16rpx;
}

.id-value {
	flex: 1;
	font-size: 24rpx;
	color: #666;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.copy-icon {
	font-size: 32rpx;
	color: #667eea;
	padding-left: 16rpx;
}

/* 汇总卡片 - 白色背景 */
.summary-card {
	background: #fff;
	border-radius: 16rpx;
	padding: 40rpx 30rpx;
	margin-bottom: 20rpx;
	display: flex;
	align-items: center;
	justify-content: space-around;
}

.summary-item {
	text-align: center;
}

.summary-badge {
	display: inline-block;
	padding: 16rpx 32rpx;
	border-radius: 12rpx;
	min-width: 120rpx;
}

.balance-badge {
	background: linear-gradient(135deg, #667eea, #764ba2);
}

.times-badge {
	background: linear-gradient(135deg, #f093fb, #f5576c);
}

.summary-value {
	font-size: 40rpx;
	font-weight: bold;
	color: #fff;
}

.summary-label {
	font-size: 26rpx;
	color: #666;
	margin-top: 12rpx;
}

/* 操作区域 */
.action-section {
	background: #fff;
	border-radius: 16rpx;
	padding: 30rpx;
	margin-bottom: 20rpx;
}

.section-title {
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 20rpx;
}

.action-grid {
	display: flex;
	justify-content: space-around;
}

.action-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 20rpx 30rpx;
}

.action-item:active {
	opacity: 0.7;
}

.action-icon {
	font-size: 48rpx;
	color: #667eea;
	margin-bottom: 12rpx;
}

.action-text {
	font-size: 26rpx;
	color: #666;
}

/* 卡项列表 */
.card-section {
	background: #fff;
	border-radius: 16rpx;
	padding: 30rpx;
}

.card-list {
	margin-top: 10rpx;
}

.card-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 24rpx 0;
	border-bottom: 1rpx solid #f0f0f0;
}

.card-item:last-child {
	border-bottom: none;
}

.card-item:active {
	background: #f8f9fa;
	margin: 0 -30rpx;
	padding-left: 30rpx;
	padding-right: 30rpx;
}

.card-left {
	flex: 1;
}

.card-name {
	font-size: 30rpx;
	color: #333;
}

.card-id {
	font-size: 24rpx;
	color: #999;
	margin-top: 8rpx;
}

.card-right {
	text-align: right;
}

.card-value {
	font-size: 32rpx;
	font-weight: bold;
	color: #667eea;
}

.card-status {
	font-size: 22rpx;
	padding: 4rpx 12rpx;
	border-radius: 20rpx;
	margin-top: 8rpx;
	display: inline-block;
}

.card-status.status-1 {
	background: #e8f5e9;
	color: #4caf50;
}

.card-status.status-0 {
	background: #fafafa;
	color: #999;
}

.card-status.status-2 {
	background: #ffebee;
	color: #f44336;
}

/* 空状态 */
.empty-card {
	background: #fff;
	border-radius: 16rpx;
	padding: 60rpx;
	text-align: center;
	color: #999;
}

/* Loading */
.loading {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 400rpx;
	color: #999;
}

/* Modal 样式 */
.modal-mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 0, 0, 0.5);
	z-index: 1000;
}

.modal-container {
	position: fixed;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
	width: 600rpx;
	background: #fff;
	border-radius: 20rpx;
	z-index: 1001;
	overflow: hidden;
}

.modal-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 30rpx;
	border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

.modal-close {
	font-size: 36rpx;
	color: #999;
	padding: 10rpx;
}

.modal-body {
	padding: 30rpx;
}

.modal-tip {
	font-size: 28rpx;
	color: #666;
	line-height: 1.6;
	margin-bottom: 24rpx;
}

.modal-id-row {
	display: flex;
	align-items: center;
	padding: 20rpx;
	background: #f8f9fa;
	border-radius: 10rpx;
}

.modal-id-row:active {
	background: #e9ecef;
}

.modal-id-label {
	font-size: 28rpx;
	color: #999;
	margin-right: 12rpx;
}

.modal-id-value {
	flex: 1;
	font-size: 26rpx;
	color: #333;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.modal-footer {
	display: flex;
	padding: 20rpx 30rpx 30rpx;
	gap: 20rpx;
}

.modal-btn {
	flex: 1;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 40rpx;
	font-size: 28rpx;
}

.cancel-btn {
	background: #f5f5f5;
	color: #666;
}

.confirm-btn {
	background: linear-gradient(135deg, #667eea, #764ba2);
	color: #fff;
}

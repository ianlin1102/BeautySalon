.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: white;
  border-radius: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.admin-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
}

.nav-buttons {
  display: flex;
  gap: 15rpx;
}

.btn-nav {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  border: none;
  font-size: 28rpx;
  background-color: #909399;
  color: white;
}

.btn-nav.btn-user {
  background-color: #409eff;
}

.btn-nav.btn-home {
  background-color: #67c23a;
}

.section {
  margin-bottom: 30rpx;
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.clear-btn {
  font-size: 24rpx;
  color: #5756B3;
  font-weight: normal;
  padding: 8rpx 16rpx;
  border: 1px solid #5756B3;
  border-radius: 20rpx;
}

.phone-input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  border: none;
}

.btn:last-child {
  margin-bottom: 0;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: bold;
}

.btn-success {
  background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);
  color: white;
  font-weight: bold;
}

.btn-warning {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  font-weight: bold;
}

.hint {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: -10rpx;
}

.log-container {
  max-height: 600rpx;
  background: #fafafa;
  border-radius: 10rpx;
  padding: 20rpx;
}

.log-item {
  margin-bottom: 20rpx;
  padding: 15rpx;
  background: white;
  border-radius: 8rpx;
  border-left: 4rpx solid #5756B3;
}

.log-time {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.log-message {
  font-size: 26rpx;
  line-height: 1.6;
  word-wrap: break-word;
  display: block;
}

.empty-log {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 60rpx 0;
}

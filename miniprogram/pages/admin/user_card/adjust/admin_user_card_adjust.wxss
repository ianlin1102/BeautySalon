.container {
	padding: 20rpx;
	background-color: #f5f5f5;
	min-height: 100vh;
}

/* 卡项信息 */
.card-info {
	background: #fff;
	border-radius: 16rpx;
	padding: 30rpx;
	margin-bottom: 20rpx;
}

.card-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding-bottom: 20rpx;
	border-bottom: 1rpx solid #f0f0f0;
}

.card-name {
	font-size: 34rpx;
	font-weight: bold;
	color: #333;
}

.card-type {
	font-size: 24rpx;
	padding: 6rpx 16rpx;
	background: #e8f5e9;
	color: #4caf50;
	border-radius: 20rpx;
}

.card-detail {
	margin-top: 20rpx;
}

.detail-item {
	display: flex;
	justify-content: space-between;
	padding: 16rpx 0;
}

.detail-label {
	font-size: 28rpx;
	color: #999;
}

.detail-value {
	font-size: 28rpx;
	color: #333;
}

.detail-value.highlight {
	color: #667eea;
	font-weight: bold;
}

.detail-value.status-1 {
	color: #4caf50;
}

.detail-value.status-0 {
	color: #999;
}

.detail-value.status-2 {
	color: #f44336;
}

/* 表单 */
.form-section {
	background: #fff;
	border-radius: 16rpx;
	padding: 30rpx;
	margin-bottom: 20rpx;
}

.section-title {
	font-size: 30rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 20rpx;
}

.form-item {
	padding: 20rpx 0;
	border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
	border-bottom: none;
}

.form-label {
	font-size: 28rpx;
	color: #333;
	margin-bottom: 16rpx;
	display: block;
}

.required {
	color: #f44336;
}

.radio-group {
	display: flex;
	gap: 30rpx;
}

.radio-item {
	display: flex;
	align-items: center;
	padding: 16rpx 32rpx;
	background: #f8f9fa;
	border-radius: 8rpx;
	font-size: 28rpx;
}

.radio-item.active {
	background: rgba(102, 126, 234, 0.1);
	color: #667eea;
}

.radio-item radio {
	margin-right: 8rpx;
}

.form-input {
	width: 100%;
	height: 80rpx;
	padding: 0 20rpx;
	background: #f8f9fa;
	border-radius: 8rpx;
	font-size: 28rpx;
	box-sizing: border-box;
}

.form-textarea {
	width: 100%;
	height: 160rpx;
	padding: 20rpx;
	background: #f8f9fa;
	border-radius: 8rpx;
	font-size: 28rpx;
	box-sizing: border-box;
}

/* 按钮 */
.btn-section {
	display: flex;
	gap: 20rpx;
	padding: 30rpx 0;
}

.btn {
	flex: 1;
	height: 88rpx;
	line-height: 88rpx;
	text-align: center;
	border-radius: 44rpx;
	font-size: 30rpx;
}

.cancel-btn {
	background: #f5f5f5;
	color: #666;
}

.submit-btn {
	background: linear-gradient(135deg, #667eea, #764ba2);
	color: #fff;
}

/* 空状态 */
.empty {
	text-align: center;
	padding: 100rpx;
	color: #999;
}

.loading {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 400rpx;
	color: #999;
}

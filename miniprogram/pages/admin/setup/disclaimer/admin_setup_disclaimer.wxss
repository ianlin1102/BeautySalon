@import '../../../../style/project/base/admin.wxss';

.section-list {
	margin-top: 20rpx;
}

.section-item {
	margin-bottom: 20rpx;
	position: relative;
}

.section-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx 0;
	border-bottom: 1rpx solid #eee;
	margin-bottom: 20rpx;
}

.section-num {
	font-size: 30rpx;
	font-weight: bold;
	color: var(--adminColor);
}

.section-del {
	font-size: 26rpx;
	color: #e54d42;
	padding: 10rpx 20rpx;
}

.action-bar {
	display: flex;
	gap: 20rpx;
	margin-top: 30rpx;
}

.btn-add {
	flex: 1;
	background-color: var(--adminColor) !important;
	color: #fff !important;
	font-size: 28rpx;
	border-radius: 10rpx;
	line-height: 2.5;
}

.btn-reset {
	flex: 1;
	background-color: #f5f5f5 !important;
	color: #666 !important;
	font-size: 28rpx;
	border-radius: 10rpx;
	line-height: 2.5;
}

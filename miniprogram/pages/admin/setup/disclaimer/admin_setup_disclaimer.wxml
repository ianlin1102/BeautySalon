<view wx:if="{{!isLoad}}" class="margin-top load loading text-l text-admin"></view>

<view class="main-admin" wx:if="{{isAdmin&&isLoad}}">

	<!-- 标题 -->
	<view class="form-box shadow">
		<view class="form-group">
			<view class="title">声明标题：</view>
		</view>
		<view class="form-group">
			<input placeholder="请输入声明标题" placeholder-class="phc" model:value="{{formTitle}}" maxlength="50" />
		</view>
	</view>

	<!-- 条款列表 -->
	<view class="section-list">
		<view class="section-item form-box shadow" wx:for="{{sections}}" wx:key="index">
			<view class="section-header">
				<text class="section-num">条款 {{index + 1}}</text>
				<text class="section-del" bindtap="bindDelSection" data-idx="{{index}}">删除</text>
			</view>

			<view class="form-group">
				<view class="title">标题：</view>
			</view>
			<view class="form-group">
				<input placeholder="如：一、购买须知" placeholder-class="phc" value="{{item.title}}" data-idx="{{index}}" bindinput="bindTitleInput" maxlength="50" />
			</view>

			<view class="form-group">
				<view class="title">内容：</view>
			</view>
			<view class="form-group">
				<textarea placeholder="请输入条款内容，每条用换行分隔" placeholder-class="phc" value="{{item.content}}" data-idx="{{index}}" bindinput="bindContentInput" maxlength="2000" auto-height style="min-height: 150rpx;"></textarea>
			</view>
		</view>
	</view>

	<!-- 操作按钮 -->
	<view class="action-bar">
		<button class="btn-add" bindtap="bindAddSection">+ 添加条款</button>
		<button class="btn-reset" bindtap="bindResetDefault">恢复默认</button>
	</view>

	<button bindtap="bindFormSubmit" class="btn-admin margin-top-xl">保存</button>

</view>

/* ========== 横向滚动日历组件 - Dark Neon Theme ========== */

.scroll-calendar-wrapper {
	width: 100%;
	background-color: #050511;
	padding-bottom: 10rpx;
}

/* ========== 头部操作栏 ========== */
.scroll-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 24rpx 30rpx 16rpx;
}

.scroll-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #ffffff;
}

.scroll-actions {
	display: flex;
	gap: 12rpx;
}

/* 操作按钮 - Glass Effect */
.scroll-btn {
	display: flex;
	align-items: center;
	gap: 6rpx;
	padding: 12rpx 20rpx;
	border-radius: 40rpx;
	background: rgba(255, 255, 255, 0.05);
	border: 1rpx solid rgba(255, 255, 255, 0.1);
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.7);
	transition: all 0.2s;
	backdrop-filter: blur(10rpx);
}

.scroll-btn:active {
	background: rgba(255, 255, 255, 0.1);
	transform: scale(0.95);
}

.btn-text {
	font-size: 24rpx;
}

/* ========== 滚动容器 ========== */
.scroll-container {
	width: 100%;
	white-space: nowrap;
	padding: 20rpx 0;
	/* 渐变遮罩效果 */
	-webkit-mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
	mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
}

.scroll-days {
	display: inline-flex;
	padding: 0 20rpx;
	gap: 12rpx;
}

.scroll-weeks {
	display: inline-flex;
	padding: 0 20rpx;
	gap: 16rpx;
}

/* ========== 日期项 - Glass Effect ========== */
.day-item {
	position: relative;
	display: inline-flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	min-width: 96rpx;
	height: 120rpx;
	padding: 16rpx 20rpx;
	border-radius: 20rpx;
	background: rgba(255, 255, 255, 0.03);
	border: 1rpx solid rgba(255, 255, 255, 0.05);
	transition: all 0.3s;
	flex-shrink: 0;
}

/* 月份分隔 */
.month-divider {
	position: absolute;
	top: -30rpx;
	left: 50%;
	transform: translateX(-50%);
	font-size: 20rpx;
	color: rgba(255, 255, 255, 0.4);
	font-weight: bold;
	white-space: nowrap;
}

/* 日期内容 */
.day-content {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 6rpx;
	position: relative;
}

.day-week {
	font-size: 22rpx;
	color: rgba(255, 255, 255, 0.5);
	font-weight: 600;
}

.day-month {
	font-size: 22rpx;
	color: rgba(255, 255, 255, 0.5);
	font-weight: 600;
}

.day-num {
	font-size: 36rpx;
	font-weight: bold;
	color: #ffffff;
}

/* ========== 今天状态 ========== */
.day-item.is-today {
	background: linear-gradient(135deg, rgba(99, 102, 241, 0.15), rgba(45, 212, 191, 0.1));
	border: 1rpx solid rgba(99, 102, 241, 0.3);
}

.day-item.is-today .day-week,
.day-item.is-today .day-month {
	color: rgba(255, 255, 255, 0.7);
}

.day-item.is-today .day-num {
	color: #ffffff;
}

/* ========== 选中状态 - Neon Gradient ========== */
.day-item.selected {
	background: linear-gradient(135deg, #6366f1, #2dd4bf);
	border: none;
	transform: scale(1.08);
	box-shadow:
		0 0 20rpx rgba(99, 102, 241, 0.5),
		0 0 40rpx rgba(45, 212, 191, 0.3),
		inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
	animation: breathe-selected 3s infinite ease-in-out;
}

@keyframes breathe-selected {
	0%, 100% {
		box-shadow:
			0 0 15rpx rgba(99, 102, 241, 0.4),
			0 0 30rpx rgba(45, 212, 191, 0.2),
			inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
	}
	50% {
		box-shadow:
			0 0 25rpx rgba(99, 102, 241, 0.6),
			0 0 50rpx rgba(45, 212, 191, 0.4),
			inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
	}
}

.day-item.selected .day-week,
.day-item.selected .day-month {
	color: rgba(255, 255, 255, 0.9);
	font-weight: 600;
}

.day-item.selected .day-num {
	color: #fff;
	font-weight: 700;
	text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* ========== 数据点 ========== */
.has-dot {
	width: 12rpx;
	height: 12rpx;
	border-radius: 50%;
	background: linear-gradient(135deg, #f43f5e, #fb7185);
	position: absolute;
	top: -6rpx;
	right: -6rpx;
	box-shadow: 0 0 8rpx rgba(244, 63, 94, 0.6);
}

.day-item.selected .has-dot {
	background: #ffffff;
	box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.8);
}

/* ========== 周项 - Glass Effect ========== */
.week-item {
	position: relative;
	display: inline-flex;
	flex-direction: column;
	align-items: center;
	min-width: 160rpx;
	padding: 20rpx 24rpx;
	border-radius: 20rpx;
	background: rgba(255, 255, 255, 0.03);
	border: 1rpx solid rgba(255, 255, 255, 0.05);
	transition: all 0.3s;
	flex-shrink: 0;
}

/* 当前周 */
.week-item.is-current-week {
	border: 1rpx solid rgba(251, 191, 36, 0.4);
	background: rgba(251, 191, 36, 0.05);
}

/* 选中的周 */
.week-item.selected {
	background: linear-gradient(135deg, #6366f1, #2dd4bf);
	border: none;
	box-shadow:
		0 0 20rpx rgba(99, 102, 241, 0.5),
		0 0 40rpx rgba(45, 212, 191, 0.3),
		inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
	animation: breathe-selected 3s infinite ease-in-out;
}

/* 周内容 */
.week-content {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 6rpx;
	position: relative;
}

.week-range {
	font-size: 26rpx;
	color: #ffffff;
	font-weight: 600;
	white-space: nowrap;
}

.week-label {
	font-size: 20rpx;
	color: rgba(255, 255, 255, 0.5);
	font-weight: 500;
}

.week-item.selected .week-range {
	color: #fff;
	font-weight: 700;
	text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.week-item.selected .week-label {
	color: rgba(255, 255, 255, 0.85);
}

.week-item.selected .has-dot {
	background: #fbbf24;
	box-shadow: 0 0 8rpx rgba(251, 191, 36, 0.8);
}

/* ========== 完整日历弹窗 - Glass Theme ========== */
.calendar-popup {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(5, 5, 17, 0.85);
	backdrop-filter: blur(20rpx);
	z-index: 9999;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 40rpx;
}

.popup-content {
	width: 100%;
	max-width: 700rpx;
	background: rgba(20, 20, 40, 0.95);
	border: 1rpx solid rgba(255, 255, 255, 0.1);
	border-radius: 32rpx;
	overflow: hidden;
	max-height: 80vh;
	box-shadow:
		0 20rpx 60rpx rgba(0, 0, 0, 0.5),
		inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

.popup-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 30rpx;
	border-bottom: 1rpx solid rgba(255, 255, 255, 0.08);
}

.popup-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #ffffff;
}

.popup-close {
	width: 60rpx;
	height: 60rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 32rpx;
	color: rgba(255, 255, 255, 0.6);
	border-radius: 50%;
	background: rgba(255, 255, 255, 0.05);
	transition: all 0.2s;
}

.popup-close:active {
	background: rgba(255, 255, 255, 0.1);
	transform: scale(0.95);
}

/* 横向滚动日历组件样式 */

.scroll-calendar-wrapper {
	width: 100%;
	background-color: #fff;
}

/* 头部 */
.scroll-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 24rpx 30rpx 16rpx;
}

.scroll-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

.scroll-actions {
	display: flex;
	gap: 12rpx;
}

.scroll-btn {
	display: flex;
	align-items: center;
	gap: 6rpx;
	padding: 12rpx 20rpx;
	border-radius: 40rpx;
	background-color: #f5f5f5;
	font-size: 24rpx;
	color: #666;
	transition: all 0.2s;
}

.scroll-btn:active {
	background-color: #e8e8e8;
	transform: scale(0.95);
}

.btn-text {
	font-size: 24rpx;
}

/* 滚动容器 */
.scroll-container {
	width: 100%;
	white-space: nowrap;
	padding: 20rpx 0;
}

.scroll-days {
	display: inline-flex;
	padding: 0 20rpx;
	gap: 12rpx;
}

/* 日期项 */
.day-item {
	position: relative;
	display: inline-flex;
	flex-direction: column;
	align-items: center;
	min-width: 96rpx;
	padding: 16rpx 20rpx;
	border-radius: 20rpx;
	background-color: #f5f5f5;
	transition: all 0.3s;
	flex-shrink: 0;
}

/* 月份分隔 */
.month-divider {
	position: absolute;
	top: -30rpx;
	left: 50%;
	transform: translateX(-50%);
	font-size: 20rpx;
	color: #999;
	font-weight: bold;
	white-space: nowrap;
}

/* 日期内容 */
.day-content {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 6rpx;
	position: relative;
}

.day-week {
	font-size: 22rpx;
	color: #999;
	font-weight: 600;
}

.day-month {
	font-size: 22rpx;
	color: #999;
	font-weight: 600;
}

.day-num {
	font-size: 36rpx;
	font-weight: bold;
	color: #333;
}

/* 今天 */
.day-item.is-today {
	background-color: #f0f0f0;
	border: 2rpx solid #999;
}

.day-item.is-today .day-week,
.day-item.is-today .day-month {
	color: #666;
}

.day-item.is-today .day-num {
	color: #333;
}

/* 选中状态 */
.day-item.selected {
	background-color: #5756B3;
	transform: scale(1.08);
	box-shadow: 0 6rpx 16rpx rgba(87, 86, 179, 0.35);
}

.day-item.selected .day-week,
.day-item.selected .day-month {
	color: rgba(255, 255, 255, 0.85);
	font-weight: 600;
}

.day-item.selected .day-num {
	color: #fff;
	font-weight: 700;
}

/* 数据点 */
.has-dot {
	width: 14rpx;
	height: 14rpx;
	border-radius: 50%;
	background-color: #ff4444;
	position: absolute;
	top: -6rpx;
	right: -6rpx;
	border: 2rpx solid #fff;
	box-shadow: 0 2rpx 4rpx rgba(255, 68, 68, 0.3);
}

.day-item.selected .has-dot {
	background-color: #fff;
}

/* 完整日历弹窗 */
.calendar-popup {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0, 0, 0, 0.5);
	z-index: 9999;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 40rpx;
}

.popup-content {
	width: 100%;
	max-width: 700rpx;
	background-color: #fff;
	border-radius: 20rpx;
	overflow: hidden;
	max-height: 80vh;
}

.popup-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 30rpx;
	border-bottom: 1px solid #f0f0f0;
}

.popup-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

.popup-close {
	width: 60rpx;
	height: 60rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 32rpx;
	color: #666;
}

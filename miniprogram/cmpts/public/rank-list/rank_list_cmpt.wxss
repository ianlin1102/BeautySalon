/* 核销排行榜组件样式 - 领奖台版本 */
.rank-list-container {
	background: #fff;
	border-radius: 16rpx;
	padding: 24rpx;
	margin: 20rpx 0;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 榜单标题和切换 */
.rank-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 24rpx;
	padding-bottom: 16rpx;
	border-bottom: 1px solid #f0f0f0;
}

.rank-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

.rank-tabs {
	display: flex;
	background: #f5f5f5;
	border-radius: 40rpx;
	padding: 4rpx;
}

.rank-tab {
	padding: 8rpx 24rpx;
	font-size: 24rpx;
	color: #666;
	border-radius: 40rpx;
	transition: all 0.3s;
}

.rank-tab.active {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: #fff;
	font-weight: bold;
}

/* 领奖台容器 */
.podium-container {
	position: relative;
	padding: 40rpx 0 20rpx;
}

.podium {
	display: flex;
	justify-content: center;
	align-items: flex-end;
	gap: 20rpx;
	min-height: 400rpx;
	padding: 0 20rpx;
}

/* 领奖台项目 */
.podium-item {
	flex: 1;
	display: flex;
	flex-direction: column;
	align-items: center;
	position: relative;
	animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
	from {
		opacity: 0;
		transform: translateY(30rpx);
	}
	to {
		opacity: 1;
		transform: translateY(0);
	}
}

/* 皇冠 - 只有第一名有 */
.podium-crown {
	position: absolute;
	top: -45rpx;
	font-size: 48rpx;
	animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
	0%, 100% {
		transform: translateY(0);
	}
	50% {
		transform: translateY(-10rpx);
	}
}

/* 排名徽章 */
.podium-rank {
	margin-bottom: 12rpx;
}

.medal-icon {
	font-size: 48rpx;
	display: inline-block;
	animation: swing 3s ease-in-out infinite;
}

@keyframes swing {
	0%, 100% {
		transform: rotate(-5deg);
	}
	50% {
		transform: rotate(5deg);
	}
}

/* 头像 */
.podium-avatar {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	background: linear-gradient(135deg, #e0e0e0 0%, #bdbdbd 100%);
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 12rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
	border: 4rpx solid #fff;
}

.podium-avatar-1 {
	width: 120rpx;
	height: 120rpx;
	background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
	box-shadow: 0 6rpx 16rpx rgba(255, 215, 0, 0.4);
}

.avatar-text {
	font-size: 32rpx;
	font-weight: bold;
	color: #fff;
}

.podium-avatar-1 .avatar-text {
	font-size: 40rpx;
}

/* 用户名 */
.podium-name {
	font-size: 24rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 8rpx;
	max-width: 120rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

/* 核销次数 */
.podium-count {
	display: flex;
	align-items: baseline;
	gap: 4rpx;
	margin-bottom: 16rpx;
}

.count-num {
	font-size: 32rpx;
	font-weight: bold;
	color: #667eea;
}

.count-unit {
	font-size: 20rpx;
	color: #999;
}

/* 领奖台底座 */
.podium-base {
	width: 100%;
	border-radius: 12rpx 12rpx 0 0;
	display: flex;
	align-items: center;
	justify-content: center;
	font-weight: bold;
	color: #fff;
	position: relative;
	box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.base-rank {
	font-size: 48rpx;
	opacity: 0.3;
}

/* 第一名（金牌）- 最高 */
.podium-1 {
	animation-delay: 0.2s;
}

.podium-base-1 {
	height: 200rpx;
	background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
}

/* 第二名（银牌）- 中等 */
.podium-2 {
	animation-delay: 0s;
}

.podium-base-2 {
	height: 150rpx;
	background: linear-gradient(135deg, #C0C0C0 0%, #A8A8A8 100%);
}

.podium-2 .podium-avatar {
	background: linear-gradient(135deg, #C0C0C0 0%, #A8A8A8 100%);
}

/* 第三名（铜牌）- 较低 */
.podium-3 {
	animation-delay: 0.4s;
}

.podium-base-3 {
	height: 120rpx;
	background: linear-gradient(135deg, #CD7F32 0%, #B8792F 100%);
}

.podium-3 .podium-avatar {
	background: linear-gradient(135deg, #CD7F32 0%, #B8792F 100%);
}

/* 空状态 */
.rank-empty {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 80rpx 0;
}

.empty-icon {
	font-size: 100rpx;
	margin-bottom: 20rpx;
	opacity: 0.5;
}

.empty-text {
	font-size: 28rpx;
	color: #999;
}
